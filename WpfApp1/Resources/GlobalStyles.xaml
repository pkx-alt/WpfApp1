<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="PrimaryBrandColor">#007ACC</Color>
    <Color x:Key="SecondaryAccentColor">#28A745</Color>
    <Color x:Key="LightBackgroundColor">#F8F9FA</Color>

    <Color x:Key="PrimaryTextColor">#343a40</Color>
    <Color x:Key="SecondaryTextColor">#6c757d</Color>
    <Color x:Key="BorderColor">#E0E0E0</Color>

    <Color x:Key="SidebarColor">#f1f0eb</Color>

    <SolidColorBrush x:Key="SidebarColorBrush" Color="{StaticResource SidebarColor}" />

    <SolidColorBrush x:Key="PrimaryBrandBrush" Color="{StaticResource PrimaryBrandColor}" />
    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="{StaticResource SecondaryAccentColor}" />
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackgroundColor}" />

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />
    <!--<SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />-->

    
    <SolidColorBrush x:Key="PrimaryColor" Color="#007ACC"/>
    <SolidColorBrush x:Key="PrimaryDarkColor" Color="#005A9E"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#6c757d"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#28A745"/>
    <SolidColorBrush x:Key="DangerColor" Color="#D32F2F"/>
    <SolidColorBrush x:Key="WarningColor" Color="#FF5722"/>
    <SolidColorBrush x:Key="PageBackground" Color="#F4F7F9"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="White"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextPrimary" Color="#333333"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#6c757d"/>
</ResourceDictionary>