<UserControl x:Class="WpfApp1.SidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="300"
             x:Name="SidebarRoot"
             Loaded="SidebarControl_Loaded"
             IsVisibleChanged="SidebarControl_IsVisibleChanged">

    <UserControl.Resources>
        <local:ActivePageToBooleanConverter x:Key="ActivePageConverter"/>

        <Style x:Key="NavSectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#6c757d"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="20,25,0,10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="NavRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#343a40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="0,1,0,1"/>
            <Setter Property="Padding" Value="25,10,10,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="GroupName" Value="NavigationItems"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="0"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#E9F3FF"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsChecked" Value="True" />
                                </MultiTrigger.Conditions>
                                <MultiTrigger.Setters>
                                    <Setter Property="Background" Value="#DDEBFF" />
                                </MultiTrigger.Setters>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource SidebarColorBrush}" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="0,0,1,0">

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="0,0,0,20">

                <TextBlock x:Name="TxtNombreTienda"
                           Text="Cargando..." 
                           FontWeight="Black"
                           FontSize="22"
                           Margin="20,30,20,20"
                           HorizontalAlignment="Left"
                           Foreground="{StaticResource PrimaryColor}"
                           Cursor="Hand" 
                           MouseLeftButtonDown="Title_MouseLeftButtonDown" />

                <Button Margin="15,0,15,15" 
                        Background="{StaticResource PrimaryColor}" 
                        Foreground="White" 
                        Content="🛒  Nueva Venta"
                        Click="NuevaVenta_Click"
                        FontSize="16"
                        FontWeight="Bold" 
                        Padding="12" 
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect Color="#007ACC" BlurRadius="10" Opacity="0.3" ShadowDepth="3"/>
                    </Button.Effect>
                </Button>

                <TextBlock Text="OPERACIÓN" Style="{StaticResource NavSectionHeader}"/>

                <Grid>
                    <RadioButton Content="🏪  Caja" Tag="Caja" Style="{StaticResource NavRadioButton}"
                                 Click="RadioButton_Click"
                                 IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Caja'}"/>

                    <Border x:Name="CajaStatusBorder" 
                            Background="#28A745" 
                            CornerRadius="4" 
                            Padding="6,2" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="0,0,15,0" 
                            IsHitTestVisible="False">
                        <TextBlock x:Name="CajaStatusText" Text="ABIERTA" Foreground="White" FontSize="9" FontWeight="Bold"/>
                    </Border>
                </Grid>

                <RadioButton Content="📝  Cotizaciones" Tag="Cotizaciones" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Cotizaciones'}"/>

                <RadioButton Content="🧾  Ventas Realizadas" Tag="Ventas realizadas" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Ventas realizadas'}"/>

                <TextBlock Text="GESTIÓN" Style="{StaticResource NavSectionHeader}"/>

                <RadioButton Content="📦  Inventario" Tag="Inventario" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Inventario'}"/>

                <RadioButton Content="🔁  Movimientos" Tag="Movimientos" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Movimientos'}"/>

                <RadioButton Content="👥  Clientes" Tag="Clientes" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Clientes'}"/>

                <RadioButton Content="📂  Departamentos" Tag="Departamentos" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Departamentos'}"/>

                <TextBlock Text="ADMINISTRACIÓN" Style="{StaticResource NavSectionHeader}"/>

                <RadioButton Content="📜  Facturación" Tag="Facturación" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Facturación'}"/>

                <RadioButton Content="💰  Ingresos" Tag="Ingresos" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Ingresos'}"/>

                <RadioButton Content="💸  Gastos" Tag="Gastos" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Gastos'}"/>

                <RadioButton Content="💳  Cuentas por Cobrar" Tag="Cuentas por cobrar" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Cuentas por cobrar'}"/>

                <TextBlock Text="ANALÍTICAS" Style="{StaticResource NavSectionHeader}"/>

                <RadioButton Content="📊  Reportes" Tag="Reportes" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Reportes'}"/>

                <RadioButton Content="📈  Estadísticas" Tag="Estadísticas" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Estadísticas'}"/>

                <TextBlock Text="SISTEMA" Style="{StaticResource NavSectionHeader}"/>

                <RadioButton Content="⚙️  Ajustes" Tag="Ajustes" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Ajustes'}"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>