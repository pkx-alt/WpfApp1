<UserControl x:Class="WpfApp1.SidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="300"
             x:Name="SidebarRoot"
             Loaded="SidebarControl_Loaded"
           IsVisibleChanged="SidebarControl_IsVisibleChanged">

    <UserControl.Resources>
        <local:ActivePageToBooleanConverter x:Key="ActivePageConverter"/>

        <Style x:Key="NavSectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#6c757d"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="20,25,0,10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="NavRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#343a40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,1,0,1"/>
            <Setter Property="Padding" Value="30,8,10,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="GroupName" Value="NavigationItems"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#E9F3FF"/>
                    <Setter Property="Foreground" Value="#0056b3"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.Setters>
                        <Setter Property="Background" Value="#F1F3F5" />
                    </Trigger.Setters>
                </Trigger>

                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True" />
                        <Condition Property="IsChecked" Value="True" />
                    </MultiTrigger.Conditions>
                    <MultiTrigger.Setters>
                        <Setter Property="Background" Value="#DDEBFF" />
                    </MultiTrigger.Setters>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource SidebarColorBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Papelería Orysí"
                   FontWeight="Bold"
                   FontSize="20"
                   Margin="20"
                   HorizontalAlignment="Center"
                   Cursor="Hand" MouseLeftButtonDown="Title_MouseLeftButtonDown" />

                <Button Margin="20,0,20,10" Background="#007ACC" Foreground="White" Content="Nueva venta"
                  Click="NuevaVenta_Click"
                  FontWeight="Bold" Padding="12" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock Text="OPERACIÓN" Style="{StaticResource NavSectionHeader}"/>
                <Grid>
                    <RadioButton Content="Caja" Style="{StaticResource NavRadioButton}"
                                 Click="RadioButton_Click"
                                 IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Caja'}"/>
                    <Border x:Name="CajaStatusBorder" Background="#28A745" CornerRadius="8" Padding="5,2" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" IsHitTestVisible="False">
                        <TextBlock x:Name="CajaStatusText" Text="Abierta" Foreground="White" FontSize="10" FontWeight="Bold"/>
                    </Border>
                </Grid>
                <RadioButton Content="Cotizaciones" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Cotizaciones'}"/>
                <RadioButton Content="Ventas realizadas" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Ventas realizadas'}"/>

                <TextBlock Text="GESTIÓN" Style="{StaticResource NavSectionHeader}"/>
                <RadioButton Content="Inventario" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Inventario'}"/>
                <RadioButton Content="Clientes" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Clientes'}"/>
                <RadioButton Content="Departamentos" Style="{StaticResource NavRadioButton}"
             Click="RadioButton_Click"
             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Departamentos'}"/>

                <TextBlock Text="ADMINISTRACIÓN" Style="{StaticResource NavSectionHeader}"/>
                <RadioButton Content="Facturación" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Facturación'}"/>
                <RadioButton Content="Ingresos" Style="{StaticResource NavRadioButton}"
             Click="RadioButton_Click"
             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Ingresos'}"/>
                <RadioButton Content="Gastos" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Gastos'}"/>
                <RadioButton Content="Cuentas por cobrar" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Cuentas por cobrar'}"/>

                <TextBlock Text="ANALÍTICAS" Style="{StaticResource NavSectionHeader}"/>
                <RadioButton Content="Reportes" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Reportes'}"/>
                <RadioButton Content="Estadísticas"
                             Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Estadísticas'}"/>

                <TextBlock Text="SISTEMA" Style="{StaticResource NavSectionHeader}"/>
                <RadioButton Content="Ajustes" Style="{StaticResource NavRadioButton}"
                             Click="RadioButton_Click"
                             IsChecked="{Binding ActivePage, ElementName=SidebarRoot, Converter={StaticResource ActivePageConverter}, ConverterParameter='Ajustes'}"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>