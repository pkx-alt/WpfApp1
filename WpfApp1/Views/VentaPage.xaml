<Page x:Class="WpfApp1.Views.VentaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Views"
      
      xmlns:vm="clr-namespace:WpfApp1.ViewModels"
      
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="VentaPage" FontFamily="Segoe UI">

    <Page.DataContext>
        <vm:VentaViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <Style x:Key="QuickActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="240"/>
            <Setter Property="Height" Value="65"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#EEE"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="15,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F8F8F8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding TituloPagina}" 
               FontSize="28" FontWeight="SemiBold" 
               VerticalAlignment="Center" HorizontalAlignment="Left" />

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">

                    <CheckBox Content="Modo Cotización 📝"
                  IsChecked="{Binding EsModoCotizacion}"
                  FontSize="16" FontWeight="Bold"
                  VerticalAlignment="Center" 
                  Margin="0,0,20,0"
                  Cursor="Hand">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                        </CheckBox.LayoutTransform>
                    </CheckBox>

                    
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
             Padding="8" FontSize="14" x:Name="SearchTextBox" VerticalContentAlignment="Center"
             GotFocus="SearchTextBox_GotFocus" LostFocus="SearchTextBox_LostFocus" 
             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchOnEnterCommand}" />
                    </TextBox.InputBindings>
                </TextBox>

                <Button Grid.Column="1" 
            Command="{Binding CrearProductoRapidoCommand}"
            Width="40" Height="40" Margin="10,0,0,0"
            Background="#28A745" BorderThickness="0" Cursor="Hand"
            ToolTip="Crear producto nuevo rápidamente">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    <TextBlock Text="+" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                </Button>
            </Grid>

            <ListBox 
                Grid.Row="2" 
                MaxHeight="200" 
                Margin="0,0,0,10"
                BorderThickness="1"
                BorderBrush="#EEE"
                
                ItemsSource="{Binding ResultadosBusqueda}">

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding AddItemFromSearchCommand}"
                                               CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=SelectedItem}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Descripcion}" FontWeight="Bold" Margin="0,0,15,0" />
                                <TextBlock Text="{Binding Precio, StringFormat=C}" Foreground="Green" Margin="0,0,15,0" />
                                <TextBlock Text="{Binding Stock, StringFormat='Stock: {0}'}" Foreground="Gray" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Grid Grid.Row="3">
                <DataGrid 
                    ItemsSource="{Binding CarritoItems}"
                    CanUserSortColumns="True"
                    AutoGenerateColumns="False" CanUserAddRows="False" Background="White" BorderThickness="0" HeadersVisibility="Column"
                    GridLinesVisibility="None" RowHeaderWidth="0" FontSize="14">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                            <Setter Property="Background" Value="#FFE8D6"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="10,12"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" SortMemberPath="ID" Width="*"/>
                        <DataGridTextColumn Header="Descripción" Binding="{Binding Description}" SortMemberPath="Description" Width="2*"/>

                        <DataGridTemplateColumn Header="UD" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

                                        <Button Name="DecreaseButton" 
                                                Content="-" 
                                                Width="25" Height="25" 
                                                FontWeight="Bold"
                                                Cursor="Hand"
                                                
                                                Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"
                                                />

                                        <TextBlock Text="{Binding Quantity}" 
                                                   Width="30" 
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   Margin="5,0"/>

                                        <Button Name="IncreaseButton" 
                                                Content="+" 
                                                Width="25" Height="25"
                                                FontWeight="Bold"
                                                Cursor="Hand"
                                                
                                                Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"
                                                />

                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Precio" Binding="{Binding Price, StringFormat={}{0:C}}" SortMemberPath="Price" Width="*"/>
                        <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat={}{0:C}}" SortMemberPath="Subtotal" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <StackPanel Grid.Row="4" HorizontalAlignment="Right" Margin="0,20,10,10" TextBlock.FontSize="16">
                <TextBlock Text="{Binding Subtotal, StringFormat='Subtotal: {0:C}'}" HorizontalAlignment="Right"/>
                <TextBlock Text="{Binding Iva, StringFormat='IVA: {0:C}'}" HorizontalAlignment="Right"/>

                <TextBlock HorizontalAlignment="Right" Foreground="#007ACC" Margin="0,2,0,2" FontSize="15">

                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: -{1:C}">
                            <Binding Path="TipoDescuento" />
                            <Binding Path="MontoDescuento" />
                        </MultiBinding>
                    </TextBlock.Text>

                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MontoDescuento}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <TextBlock Text="{Binding Total, StringFormat='Total: {0:C}'}" HorizontalAlignment="Right" FontWeight="Bold" FontSize="20" Foreground="Red" Margin="0,5,0,0"/>
            </StackPanel>

        </Grid>

        <Border Grid.Column="1" Grid.Row="0" Background="White" Padding="10">
            <StackPanel>
                <TextBlock Text="Acciones rápidas" FontWeight="Bold" FontSize="16" Margin="5,5,5,10" HorizontalAlignment="Center"/>

                <Button Style="{StaticResource QuickActionButtonStyle}" Background="#E3F2FD" 
                        Command="{Binding CambiarClienteCommand}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="👥" FontSize="28" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Cambiar cliente" FontWeight="SemiBold"/>
                            <TextBlock Text="Alt + F2" Foreground="Gray" FontSize="10"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <Button Style="{StaticResource QuickActionButtonStyle}" Background="#FFF9C4"
                        Command="{Binding ResumirVentaCommand}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="📑" FontSize="28" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Resumir venta" FontWeight="SemiBold"/>
                            <TextBlock Text="Ver ventas en espera" Foreground="Gray" FontSize="10"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <Grid>
                    <Button Background="#FCE4EC"
            Command="{Binding RealizarDescuentoCommand}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="45"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="%" FontSize="28" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Realizar descuento" FontWeight="SemiBold"/>
                                <TextBlock Text="Alt + F4" Foreground="Gray" FontSize="10"/>
                            </StackPanel>
                        </Grid>

                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource QuickActionButtonStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding MontoDescuento}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Background="#FCDCDC"
            Command="{Binding CancelarDescuentoCommand}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="45"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="❌" FontSize="28" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Cancelar descuento" FontWeight="SemiBold"/>
                                <TextBlock Text="Quitar descuento aplicado" Foreground="Gray" FontSize="10"/>
                            </StackPanel>
                        </Grid>

                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource QuickActionButtonStyle}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding MontoDescuento}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <Button Style="{StaticResource QuickActionButtonStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="🖨️" FontSize="28" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Reimprimir ticket" FontWeight="SemiBold"/>
                            <TextBlock Text="Alt + F3" Foreground="Gray" FontSize="10"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <Button Style="{StaticResource QuickActionButtonStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="📄" FontSize="28" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Realizar factura" FontWeight="SemiBold"/>
                            <TextBlock Text="Alt + F5" Foreground="Gray" FontSize="10"/>
                        </StackPanel>
                    </Grid>
                </Button>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" 
                    Margin="0,10,20,10">

            <Button x:Name="FinVentaBtn" 
        Command="{Binding FinalizarVentaCommand}" 
        
        Content="{Binding TextoBotonFinalizar}" 
        Background="{Binding ColorBotonFinalizar}"
        
        Padding="25,12" Foreground="White" FontWeight="Bold" BorderThickness="0" Margin="0,0,10,0" Cursor="Hand"/>

            <Button 
                    Command="{Binding CancelarVentaCommand}" 
                    Content="Cancelar venta (Ctrl + Supr)" Padding="25,12" Background="#DC3545" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>

        </StackPanel>
    </Grid>
</Page>