<Page x:Class="WpfApp1.Views.EstadisticasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:WpfApp1.ViewModels"
      
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="EstadisticasPage"
      FontFamily="Segoe UI"
      Background="{StaticResource LightBackgroundBrush}">

    <Page.DataContext>
        <vm:EstadisticasViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#B0BEC5" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">

            <TextBlock Text="Analíticas y Estadísticas 📈" 
                       FontSize="30" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryTextBrush}"
                       Margin="0,0,0,5"/>

            <TextBlock Text="Visualización de métricas clave de tu negocio." 
                       FontSize="16" 
                       Foreground="{StaticResource SecondaryTextBrush}"
                       Margin="0,0,0,20"/>

            <Separator Margin="0,0,0,20" Opacity="0.5"/>

            <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,20"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <WrapPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,25,5" VerticalAlignment="Center">
                        <TextBlock Text="Periodo: " FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <DatePicker Width="120" SelectedDate="{Binding FechaInicio}"/>
                        <TextBlock Text="➔" VerticalAlignment="Center" Foreground="Gray" Margin="10,0"/>
                        <DatePicker Width="120" SelectedDate="{Binding FechaFin}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,25,5" VerticalAlignment="Center">
                        <TextBlock Text="Categoría: " FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Width="150" SelectedIndex="0">
                            <ComboBoxItem Content="Todas"/>
                            <ComboBoxItem Content="Papelería"/>
                            <ComboBoxItem Content="Fiesta"/>
                        </ComboBox>
                    </StackPanel>
                </WrapPanel>
            </Border>

            <UniformGrid Columns="4" Margin="0,0,0,20">

                <Border Style="{StaticResource MetricCardStyle}" Background="#E8F5E9">
                    <StackPanel>
                        <TextBlock Text="INGRESOS NETOS" FontSize="12" Foreground="#28A745" FontWeight="Bold"/>
                        <TextBlock Text="{Binding IngresosNetos, StringFormat={}{0:C}}" 
                                   FontSize="30" Foreground="#28A745" FontWeight="ExtraBold" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding ComparativaIngreso}" FontSize="12" Foreground="#66BB6A"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource MetricCardStyle}" Background="#FFF3E0">
                    <StackPanel>
                        <TextBlock Text="GANANCIA BRUTA" FontSize="12" Foreground="#FF9800" FontWeight="Bold"/>
                        <TextBlock Text="{Binding GananciaBruta, StringFormat={}{0:C}}" 
                                   FontSize="30" Foreground="#FF9800" FontWeight="ExtraBold" Margin="0,5,0,0"/>
                        <TextBlock Text="Margen promedio: --%" FontSize="12" Foreground="#FFB74D"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource MetricCardStyle}" Background="#E3F2FD">
                    <StackPanel>
                        <TextBlock Text="VENTAS (TICKETS)" FontSize="12" Foreground="#2196F3" FontWeight="Bold"/>
                        <TextBlock FontSize="30" Foreground="#2196F3" FontWeight="ExtraBold" Margin="0,5,0,0">
                            <Run Text="{Binding VentasTotales, StringFormat=N0}"/>
                            <Run Text=" u." FontSize="20"/>
                        </TextBlock>
                        <TextBlock Text="Transacciones" FontSize="12" Foreground="#64B5F6"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource MetricCardStyle}" Background="#FBEBEA">
                    <StackPanel>
                        <TextBlock Text="GASTOS OPERATIVOS" FontSize="12" Foreground="#D32F2F" FontWeight="Bold"/>
                        <TextBlock Text="{Binding GastosOperativos, StringFormat={}{0:C}}" 
                                   FontSize="30" Foreground="#D32F2F" FontWeight="ExtraBold" Margin="0,5,0,0"/>
                        <TextBlock Text="vs Mes anterior: --" FontSize="12" Foreground="#E57373"/>
                    </StackPanel>
                </Border>

            </UniformGrid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}" Padding="20" Margin="0,0,20,0" Height="450">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Tendencia de Ventas" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <lvc:CartesianChart Grid.Row="1" Series="{Binding SeriesVentas}" LegendLocation="None">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Labels="{Binding EtiquetasEjeX}">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1" StrokeThickness="0" />
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis LabelFormatter="{Binding FormateadorMoneda}" MinValue="0">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Stroke="#E0E0E0" StrokeDashArray="5"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}" Padding="25" Height="450">
                    <StackPanel>
                        <TextBlock Text="Top 5 Productos Vendidos" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <DataGrid AutoGenerateColumns="False" 
                                  IsReadOnly="True" 
                                  HeadersVisibility="Column" 
                                  CanUserAddRows="False" 
                                  GridLinesVisibility="None" 
                                  RowHeaderWidth="0"
                                  ItemsSource="{Binding TopProductos}">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Producto" Width="*" 
                                                    Binding="{Binding Nombre}" 
                                                    Foreground="{StaticResource PrimaryTextBrush}"/>
                                <DataGridTextColumn Header="Und." Width="Auto" 
                                                    Binding="{Binding Cantidad}" 
                                                    FontWeight="Bold" 
                                                    Foreground="{StaticResource SecondaryAccentBrush}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>