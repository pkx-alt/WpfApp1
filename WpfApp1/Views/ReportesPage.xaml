<Page x:Class="WpfApp1.Views.ReportesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Centro de Reportes"
      FontFamily="Segoe UI"
      Background="{StaticResource PageBackground}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30" HorizontalAlignment="Center">
            <TextBlock Text="Centro de Reportes 📊" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
            <TextBlock x:Name="TxtSubtitulo" Text="Selecciona una categoría para comenzar el análisis" FontSize="16" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="1">

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <WrapPanel x:Name="MenuCategorias" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Top"
                           Visibility="Visible">

                    <Button Style="{StaticResource ReportCardButton}" Click="Categoria_Click" Tag="Ventas">
                        <StackPanel>
                            <TextBlock Text="🛒" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="VENTAS" FontWeight="Bold" FontSize="16" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Más vendidos, Historial" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ReportCardButton}" Click="Categoria_Click" Tag="Inventario">
                        <StackPanel>
                            <TextBlock Text="📦" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="INVENTARIO" FontWeight="Bold" FontSize="16" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Valorizado, Kardex" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ReportCardButton}" Click="Categoria_Click" Tag="Financieros">
                        <StackPanel>
                            <TextBlock Text="💰" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="FINANCIEROS" FontWeight="Bold" FontSize="16" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Utilidad, Balances" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ReportCardButton}" Click="Categoria_Click" Tag="Administrativos">
                        <StackPanel>
                            <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="ADMINISTRATIVOS" FontWeight="Bold" FontSize="16" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Clientes, Cuentas" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ReportCardButton}" Click="Categoria_Click" Tag="Cotizaciones">
                        <StackPanel>
                            <TextBlock Text="📝" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="COTIZACIONES" FontWeight="Bold" FontSize="16" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Pendientes, Efectividad" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>
            </ScrollViewer>

            <Grid x:Name="SubMenuContainer" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Content="⬅️ Volver a Categorías" 
            HorizontalAlignment="Left" Margin="20,0,0,20"
            Style="{StaticResource BtnSecondary}" 
            Click="BtnVolver_Click"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel HorizontalAlignment="Left" Margin="10,0,0,0">

                        <WrapPanel x:Name="PanelOpcionesVentas" Visibility="Collapsed" Orientation="Horizontal">
                            <Button Style="{StaticResource ReportCardButton}" Click="ReporteEspecifico_Click" Tag="Ventas_MasVendidos">
                                <StackPanel>
                                    <TextBlock Text="🏆" HorizontalAlignment="Center" FontSize="28" Margin="0,0,0,5"/>
                                    <TextBlock Text="Más Vendidos" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Top productos" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource ReportCardButton}" Click="ReporteEspecifico_Click" Tag="Ventas_PorDepto">
                                <StackPanel>
                                    <TextBlock Text="🏷️" HorizontalAlignment="Center" FontSize="28" Margin="0,0,0,5"/>
                                    <TextBlock Text="Por Departamento" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Ventas por categoría" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource ReportCardButton}" Click="ReporteEspecifico_Click" Tag="Ventas_Comparativo">
                                <StackPanel>
                                    <TextBlock Text="📅" HorizontalAlignment="Center" FontSize="28" Margin="0,0,0,5"/>
                                    <TextBlock Text="Comparativo" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Mes actual vs anterior" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>

                        <WrapPanel x:Name="PanelOpcionesInventario" Visibility="Collapsed" Orientation="Horizontal">
                            <Button Style="{StaticResource ReportCardButton}" Click="ReporteEspecifico_Click" Tag="Inv_Valorizado">
                                <StackPanel>
                                    <TextBlock Text="💲" HorizontalAlignment="Center" FontSize="28" Margin="0,0,0,5"/>
                                    <TextBlock Text="Valorizado" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Valor total mercancía" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource ReportCardButton}" Click="ReporteEspecifico_Click" Tag="Inv_BajoStock">
                                <StackPanel>
                                    <TextBlock Text="⚠️" HorizontalAlignment="Center" FontSize="28" Margin="0,0,0,5"/>
                                    <TextBlock Text="Bajo Stock" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Productos urgentes" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource ReportCardButton}" Click="ReporteEspecifico_Click" Tag="Inv_Rotacion">
                                <StackPanel>
                                    <TextBlock Text="🔄" HorizontalAlignment="Center" FontSize="28" Margin="0,0,0,5"/>
                                    <TextBlock Text="Kardex" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Historial movimientos" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>

                        <WrapPanel x:Name="PanelOpcionesFinancieros" Visibility="Collapsed" Orientation="Horizontal">
                            <Button Style="{StaticResource ReportCardButton}" Click="ReporteEspecifico_Click" Tag="Fin_Utilidad">
                                <StackPanel>
                                    <TextBlock Text="📈" HorizontalAlignment="Center" FontSize="28" Margin="0,0,0,5"/>
                                    <TextBlock Text="Utilidad Neta" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Ganancia real" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource ReportCardButton}" Click="ReporteEspecifico_Click" Tag="Fin_Balance">
                                <StackPanel>
                                    <TextBlock Text="⚖️" HorizontalAlignment="Center" FontSize="28" Margin="0,0,0,5"/>
                                    <TextBlock Text="Ingresos vs Egresos" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Flujo de caja" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>

                        <WrapPanel x:Name="PanelOpcionesAdmin" Visibility="Collapsed" Orientation="Horizontal">
                            <Button Style="{StaticResource ReportCardButton}" Click="ReporteEspecifico_Click" Tag="Admin_TopClientes">
                                <StackPanel>
                                    <TextBlock Text="🥇" HorizontalAlignment="Center" FontSize="28" Margin="0,0,0,5"/>
                                    <TextBlock Text="Mejores Clientes" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Top compradores" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>

                        <WrapPanel x:Name="PanelOpcionesCotizaciones" Visibility="Collapsed" Orientation="Horizontal">
                            <Button Style="{StaticResource ReportCardButton}" Click="ReporteEspecifico_Click" Tag="Cot_Pendientes">
                                <StackPanel>
                                    <TextBlock Text="⏳" HorizontalAlignment="Center" FontSize="28" Margin="0,0,0,5"/>
                                    <TextBlock Text="Pendientes" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Cotizaciones vigentes" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource ReportCardButton}" Click="ReporteEspecifico_Click" Tag="Cot_Efectividad">
                                <StackPanel>
                                    <TextBlock Text="🎯" HorizontalAlignment="Center" FontSize="28" Margin="0,0,0,5"/>
                                    <TextBlock Text="Efectividad" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Ventas cerradas" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>

                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Grid x:Name="VistaResultados" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="20,15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="TxtTituloResultado" Text="Título del Reporte" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>

                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <RadioButton x:Name="RadioTabla" Content="Tabla de Datos" IsChecked="True" Checked="ToggleVista_Checked" Margin="0,0,15,0"/>
                                <RadioButton x:Name="RadioGrafica" Content="Gráfica Visual" Checked="ToggleVista_Checked"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1" Content="Cerrar Reporte" Style="{StaticResource BtnSecondary}" Click="BtnCerrarResultados_Click"/>
                    </Grid>
                </Border>

                <Grid Grid.Row="1">
                    <DataGrid x:Name="GridResultados" 
          AutoGenerateColumns="True"  
          AutoGeneratingColumn="GridResultados_AutoGeneratingColumn"
          ColumnWidth="*">
                    </DataGrid>

                    <Grid x:Name="ContenedorGrafica" Visibility="Collapsed" Margin="10">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" PanningMode="Both">
                            <ItemsControl x:Name="GraficaItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="10,0,10,15" Width="110">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="{Binding ValorFormateado}" HorizontalAlignment="Center" FontSize="12" FontWeight="Bold" Foreground="#555" Margin="0,0,0,5"/>
                                            <Border Grid.Row="2" BorderBrush="#999" BorderThickness="0,0,0,1" Padding="0,0,0,0">
                                                <Border Height="{Binding AlturaCalculada}" Background="{Binding ColorBarra}" CornerRadius="4,4,0,0" VerticalAlignment="Bottom" Margin="15,0" ToolTip="{Binding TooltipTexto}"/>
                                            </Border>
                                            <TextBlock Grid.Row="3" Text="{Binding Etiqueta}" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="11" Margin="2,8,2,0" Foreground="#333" Height="60" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        <TextBlock x:Name="TxtSinGrafica" Text="Vista gráfica no disponible para este reporte." Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="Gray"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="PanelFiltros" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Rango de fechas:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0" Foreground="{StaticResource TextSecondary}"/>
                    <DatePicker x:Name="DtInicio" Width="130" SelectedDateChanged="OnFechaFiltroChanged"/>
                    <TextBlock Text="al" VerticalAlignment="Center" Margin="10,0" Foreground="{StaticResource TextSecondary}"/>
                    <DatePicker x:Name="DtFin" Width="130" SelectedDateChanged="OnFechaFiltroChanged"/>
                    <TextBlock x:Name="TxtInfoReporte" Text="(Selecciona un reporte arriba)" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="{StaticResource TextSecondary}" FontStyle="Italic"/>
                </StackPanel>

                <Button x:Name="BtnExportar" Click="BtnExportar_Click" Grid.Column="1" 
                        Content="💾 Exportar Excel" Style="{StaticResource BtnSuccess}" IsEnabled="False"/>
            </Grid>
        </Border>
    </Grid>
</Page>