<Page x:Class="WpfApp1.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Views"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1000"
      Title="DashboardPage" Background="#F9F9F9">

    <Page.Resources>
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="125"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#DDDDDD" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                    <Setter Property="BorderBrush" Value="#BBBBBB"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <Style x:Key="CardValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">
            <TextBlock Text="¡Hola de nuevo! 👋" FontSize="32" FontWeight="Bold" Foreground="#2C3E50"/>
            <TextBlock Text="Aquí tienes el resumen de tu negocio hoy." FontSize="16" Foreground="#7F8C8D" Margin="0,5,0,30"/>

            <UniformGrid Columns="3">

                <Border Style="{StaticResource ModernCard}" BorderBrush="#2ECC71" BorderThickness="0,0,0,4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="VENTAS DE HOY" Style="{StaticResource CardTitle}"/>
                            <TextBlock Text="{Binding VentasHoy, StringFormat={}{0:C}}" 
                                       Style="{StaticResource CardValue}" Foreground="#27AE60"/>
                            <TextBlock Text="Ingresos brutos" FontSize="11" Foreground="#95A5A6"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1" Text="💰" FontSize="45" VerticalAlignment="Center" Opacity="0.8"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource ModernCard}" BorderBrush="#3498DB" BorderThickness="0,0,0,4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="COTIZACIONES" Style="{StaticResource CardTitle}"/>
                            <TextBlock Style="{StaticResource CardValue}" Foreground="#2980B9">
                                <Run Text="{Binding CotizacionesPendientes}"/>
                                <Run Text="Activas" FontSize="16" Foreground="#BDC3C7" FontWeight="Normal"/>
                            </TextBlock>
                            <TextBlock Text="Pendientes de cierre" FontSize="11" Foreground="#95A5A6"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1" Text="📄" FontSize="45" VerticalAlignment="Center" Opacity="0.8"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource ModernCard}" BorderBrush="#E74C3C" BorderThickness="0,0,0,4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="ATENCIÓN STOCK" Style="{StaticResource CardTitle}"/>
                            <TextBlock Style="{StaticResource CardValue}" Foreground="#C0392B">
                                <Run Text="{Binding ProductosBajoStock}"/>
                                <Run Text="Prod." FontSize="16" Foreground="#BDC3C7" FontWeight="Normal"/>
                            </TextBlock>
                            <TextBlock Text="Requieren resurtido" FontSize="11" Foreground="#95A5A6"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1" Text="📉" FontSize="45" VerticalAlignment="Center" Opacity="0.8"/>
                    </Grid>
                </Border>

            </UniformGrid>

            <TextBlock Text="Accesos Directos" FontSize="20" FontWeight="SemiBold" Foreground="#343a40" Margin="0,30,0,10"/>

            <UniformGrid Columns="3">
                <Border Style="{StaticResource ActionCard}" Background="#E9F7EF" MouseLeftButtonDown="CardNuevaVenta_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🛒" FontSize="38" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="Nueva venta" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                        <TextBlock Text="Mostrador" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ActionCard}" Background="#E7F3FE" MouseLeftButtonDown="CardCotizacion_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📝" FontSize="38" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="Crear cotización" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                        <TextBlock Text="Presupuestos" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ActionCard}" Background="#FFF8E1" MouseLeftButtonDown="CardInventario_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📦" FontSize="38" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="Inventario" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                        <TextBlock Text="Productos" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ActionCard}" Background="#F3E5F5" MouseLeftButtonDown="CardVentasRealizadas_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📅" FontSize="38" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="Historial" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                        <TextBlock Text="Ventas del día" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ActionCard}" Background="#FCE4EC" MouseLeftButtonDown="CardCaja_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🏧" FontSize="38" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="Corte de caja" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                        <TextBlock Text="Cierre de turno" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ActionCard}" Background="#ECEFF1" MouseLeftButtonDown="CardAjustes_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⚙️" FontSize="38" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="Ajustes" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                        <TextBlock Text="Configuración" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

        </StackPanel>
    </ScrollViewer>
</Page>