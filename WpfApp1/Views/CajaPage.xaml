<Page x:Class="WpfApp1.Views.CajaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000" Title="CajaPage"
      Unloaded="Page_Unloaded"
      Background="{StaticResource PageBackground}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Gestión de Caja" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                <TextBlock x:Name="FechaActualTextBlock" 
                           Text="Cargando fecha..." 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondary}" 
                           Margin="0,5,0,0"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0">

                    <Border Style="{StaticResource CardStyle}" Padding="30">
                        <StackPanel>
                            <TextBlock Text="ESTADO ACTUAL" 
           FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" 
           HorizontalAlignment="Center"/>

                            <Separator Margin="0,15" Background="{StaticResource BorderBrush}"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Ellipse x:Name="EstadoEllipse"
                                         Width="20" Height="20" 
                                         Fill="{StaticResource DangerColor}" 
                                         VerticalAlignment="Center" 
                                         Margin="0,0,15,0"/>
                                <TextBlock x:Name="EstadoTextBlock"
                                           Text="CAJA CERRADA" 
                                           FontSize="32" 
                                           FontWeight="ExtraBold" 
                                           Foreground="{StaticResource TextPrimary}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock x:Name="UltimoMovimientoTextBlock"
                                       Text="Esperando acción..." 
                                       FontSize="14" 
                                       Foreground="{StaticResource TextSecondary}"
                                       HorizontalAlignment="Center"
                                       Margin="0,15,0,0" FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <Grid x:Name="ResumenesPanel" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="💰 Efectivo en Caja" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                <StackPanel>
                                    <TextBlock x:Name="ResumenEstadoInicial" Text="Inicial: $0.00" Padding="5" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock x:Name="ResumenVentasEfectivo" Text="Ventas: $0.00" Padding="5" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock x:Name="ResumenOtrosIngresos" Text="Ingresos: $0.00" Padding="5" Foreground="{StaticResource SuccessColor}" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ResumenEgresos" Text="Egresos: $0.00" Padding="5" Foreground="{StaticResource DangerColor}" FontWeight="SemiBold"/>
                                    <Separator Margin="0,5"/>
                                    <TextBlock x:Name="ResumenTotalEsperado" 
                                       Text="Total: $0.00" 
                                       Padding="5" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryColor}"
                                       TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="📊 Ventas Totales" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                <StackPanel>
                                    <TextBlock x:Name="VentasEfectivo" Text="Efectivo: $0.00" Padding="5" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock x:Name="VentasTarjeta" Text="Tarjeta: $0.00" Padding="5" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock x:Name="VentasTransferencia" Text="Transferencia: $0.00" Padding="5" Foreground="{StaticResource TextSecondary}"/>
                                    <Separator Margin="0,5"/>
                                    <TextBlock x:Name="VentasTotalGeneral" Text="Vendido: $0.00" Padding="5" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Acciones Rápidas" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" Margin="10,0,0,10"/>

                    <Button x:Name="BtnAbrirCaja" 
                            Click="BtnAbrirCaja_Click"
                            Content="ABRIR CAJA" 
                            Style="{StaticResource BtnSuccess}"
                            Height="60" FontSize="16"
                            Margin="0,0,0,20">
                        <Button.Effect>
                            <DropShadowEffect Color="#28A745" BlurRadius="15" Opacity="0.3" ShadowDepth="3"/>
                        </Button.Effect>
                    </Button>

                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Movimientos" FontWeight="SemiBold" Margin="0,0,0,10"/>

                            <Button x:Name="BtnRegistrarIngreso" 
                                    Click="BtnRegistrarIngreso_Click"
                                    Content="Registrar Ingreso (+)" 
                                    Style="{StaticResource BtnSecondary}"
                                    HorizontalContentAlignment="Left"
                                    Margin="0,0,0,10"
                                    IsEnabled="False"/>

                            <Button x:Name="BtnRegistrarEgreso" 
                                    Click="BtnRegistrarEgreso_Click" 
                                    Content="Registrar Egreso (-)" 
                                    Style="{StaticResource BtnSecondary}"
                                    HorizontalContentAlignment="Left"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </Border>

                    <Button x:Name="BtnHistorialCaja" 
                            Click="BtnHistorialCaja_Click" 
                            Content="Ver Historial de Cortes" 
                            Style="{StaticResource BtnSecondary}"
                            Margin="0,20,0,0"/>
                </StackPanel>

            </Grid>
        </Grid>
    </ScrollViewer>
</Page>