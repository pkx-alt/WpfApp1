<Page x:Class="WpfApp1.Views.FacturacionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Views"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Facturación"
      FontFamily="Segoe UI"
      Background="#F4F7F9">

    <Page.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" Background="Transparent" 
                                    BorderBrush="Transparent" BorderThickness="0,0,0,3" 
                                    Margin="0,0,15,0" Padding="15,10">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="0,2"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="#007ACC"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="#6c757d"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#005A9E"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Facturación Electrónica 🧾" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#343a40"/>
            <TextBlock Text="Gestiona tus CFDI 4.0: Facturas globales y por cliente."
                       FontSize="14" 
                       Foreground="#6c757d" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <TabControl Grid.Row="2" Background="Transparent" BorderThickness="0">

            <TabItem Header="Pendientes de Facturar">
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect Color="#B0BEC5" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="🔎" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Gray"/>
                                <TextBox Width="150" Padding="6" VerticalContentAlignment="Center" FontSize="14"
         Tag="Buscar folio..." 
         Text="{Binding TextoBusquedaPendiente, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Cliente:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="20,0,10,0" Foreground="#555"/>
<ComboBox Width="180" Padding="5" 
          ItemsSource="{Binding ListaClientes}"
          SelectedItem="{Binding ClienteFiltroPendiente}"
          DisplayMemberPath="RazonSocial"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">

                                <TextBlock Text="Factura Global:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0" Foreground="#555"/>

                                <ComboBox Width="120" SelectedIndex="0" VerticalContentAlignment="Center" Padding="5" Margin="0,0,10,0">
                                    <ComboBoxItem Content="Del Día 📅"/>
                                    <ComboBoxItem Content="Semanal 📆"/>
                                    <ComboBoxItem Content="Mensual 🗓️"/>
                                </ComboBox>

                                <Button Content="Generar" 
                                        Background="#495057" Foreground="White" FontWeight="SemiBold"
                                        Padding="20,6" BorderThickness="0" Margin="0,0,15,0" Cursor="Hand"
                                        ToolTip="Generar factura global para el periodo seleccionado">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>

                                <Rectangle Width="1" Height="24" Fill="#DDD" Margin="0,0,15,0"/>

                                <Button Content="🔄" FontSize="16" ToolTip="Actualizar lista"
        Command="{Binding RefrescarCommand}"
        Background="Transparent" BorderThickness="0" Foreground="#007ACC" Cursor="Hand"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
          ItemsSource="{Binding ListaPendientes}" 
          Background="White" BorderThickness="0" RowHeaderWidth="0"
          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EEE"
          RowHeight="45" VerticalGridLinesBrush="Transparent">

                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Width="50" ElementStyle="{StaticResource {x:Type CheckBox}}"
                                Binding="{Binding Seleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            </DataGridCheckBoxColumn>

                            <DataGridTextColumn Header="Ticket" Binding="{Binding Folio}" Width="80" FontWeight="Bold"/>

                            <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat='dd/MM/yy HH:mm'}" Width="140" Foreground="#555"/>

                            <DataGridTemplateColumn Header="Cliente" Width="2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ClienteNombre}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding RFC}" FontSize="11" Foreground="Gray"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="120" FontWeight="Bold" Foreground="#28A745"/>

                            <DataGridTemplateColumn Header="Acción" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Facturar" 
                            Command="{Binding DataContext.FacturarTicketCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Background="#007ACC" Foreground="White" Padding="10,4" BorderThickness="0" FontSize="12" Cursor="Hand">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                    </DataGrid>

                </Grid>
            </TabItem>

            <TabItem Header="Historial de Facturas">
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect Color="#B0BEC5" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                        </Border.Effect>
                        <WrapPanel VerticalAlignment="Center">

                            <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                                <TextBlock Text="Mes:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                                <ComboBox Width="120" SelectedIndex="0" Padding="4">
                                    <ComboBoxItem Content="Noviembre"/>
                                    <ComboBoxItem Content="Octubre"/>
                                    <ComboBoxItem Content="Septiembre"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                                <TextBlock Text="Estado:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                                <ComboBox Width="120" SelectedIndex="0" Padding="4">
                                    <ComboBoxItem Content="Todas"/>
                                    <ComboBoxItem Content="Vigentes"/>
                                    <ComboBoxItem Content="Canceladas"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                                <TextBlock Text="Cliente:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                                <ComboBox Width="150" SelectedIndex="0" Padding="4">
                                    <ComboBoxItem Content="Todos"/>
                                    <ComboBoxItem Content="Escuela Benito..."/>
                                    <ComboBoxItem Content="Constructora..."/>
                                </ComboBox>
                            </StackPanel>

                            <Button Content="Buscar" Background="#007ACC" Foreground="White" Padding="25,5" BorderThickness="0" FontWeight="Bold" Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </WrapPanel>
                    </Border>

                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                              Background="White" BorderThickness="0" RowHeaderWidth="0"
                              GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EEE"
                              RowHeight="45" VerticalGridLinesBrush="Transparent">
                        <DataGrid.Effect>
                            <DropShadowEffect Color="#B0BEC5" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                        </DataGrid.Effect>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Serie/Folio" Binding="{Binding SerieFolio}" Width="100" FontWeight="Bold"/>
                            <DataGridTextColumn Header="UUID (Fiscal)" Binding="{Binding UUID}" Width="2*" Foreground="Gray"/>
                            <DataGridTextColumn Header="Receptor" Binding="{Binding Cliente}" Width="2*"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="100" FontWeight="Bold"/>

                            <DataGridTemplateColumn Header="Estado" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#D4EDDA" CornerRadius="10" Padding="8,2" HorizontalAlignment="Center" Width="80">
                                            <TextBlock Text="Vigente" Foreground="#155724" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Archivos" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="XML" Margin="2,0" Background="Transparent" BorderBrush="#CCC" BorderThickness="1" Padding="6,2" Cursor="Hand" FontSize="11"/>
                                            <Button Content="PDF" Margin="2,0" Background="Transparent" BorderBrush="#CCC" BorderThickness="1" Padding="6,2" Cursor="Hand" FontSize="11"/>
                                            <Button Content="✉" ToolTip="Reenviar" Margin="2,0" Background="Transparent" BorderBrush="#CCC" BorderThickness="1" Padding="6,2" Cursor="Hand"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Page>