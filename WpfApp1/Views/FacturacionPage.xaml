<Page x:Class="WpfApp1.Views.FacturacionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Views"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Facturación"
      FontFamily="Segoe UI"
      Background="{StaticResource LightBackgroundBrush}">

    <Page.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" Background="{TemplateBinding Background}" 
                                    BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,0,5,0" CornerRadius="5,5,0,0">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="10,2"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrandBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Facturación Electrónica (CFDI 4.0) 🧾" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryTextBrush}"/>
            <TextBlock Text="Genera facturas de tickets pendientes o consulta el historial." 
                       FontSize="14" 
                       Foreground="{StaticResource SecondaryTextBrush}" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">

            <TabItem Header="Por Facturar">
                <Grid Background="White" Margin="0,10,0,0">
                    <Grid.Effect>
                        <DropShadowEffect Color="#B0BEC5" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
                    </Grid.Effect>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="15" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Buscar Ticket:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                <TextBox Width="200" Padding="5" VerticalContentAlignment="Center" Tag="Folio o Cliente..."/>
                                <Button Content="🔍" Width="35" Margin="5,0,0,0" Background="#E0E0E0" BorderThickness="0"/>
                            </StackPanel>

                            <Button Grid.Column="1" Content="🔄 Actualizar Lista" 
                                    Background="Transparent" Foreground="{StaticResource PrimaryBrandBrush}" 
                                    BorderThickness="0" FontWeight="Bold" Cursor="Hand"/>
                        </Grid>
                    </Border>

                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                              Background="White" BorderThickness="0" RowHeaderWidth="0"
                              Padding="10">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn ElementStyle="{StaticResource {x:Type CheckBox}}" Width="50"/>

                            <DataGridTextColumn Header="Ticket #" Binding="{Binding Folio}" Width="100" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=dd/MM/yyyy}" Width="120"/>

                            <DataGridTemplateColumn Header="Cliente / RFC" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Cliente}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding RFC}" FontSize="11" Foreground="Gray"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="120" FontWeight="Bold" Foreground="{StaticResource PrimaryBrandBrush}"/>

                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Facturar" Background="#E3F2FD" Foreground="#007ACC" BorderThickness="0" FontSize="11" Padding="5,2" Cursor="Hand"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                        <x:Array Type="{x:Type local:FacturaEjemplo}">
                            <local:FacturaEjemplo Folio="1024" Fecha="18/11/2025" Cliente="Escuela Benito Juárez" RFC="ESA9010108H7" Total="1500.00"/>
                            <local:FacturaEjemplo Folio="1025" Fecha="18/11/2025" Cliente="Público en General" RFC="XAXX010101000" Total="250.00"/>
                            <local:FacturaEjemplo Folio="1023" Fecha="17/11/2025" Cliente="Constructora del Norte" RFC="CNO8805201A1" Total="8900.50"/>
                        </x:Array>
                    </DataGrid>

                    <Border Grid.Row="2" Padding="15" Background="#FAFAFA" BorderBrush="#EEE" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock VerticalAlignment="Center" Margin="0,0,20,0" FontSize="14">
                                <Run Text="Seleccionados: "/>
                                <Run Text="0" FontWeight="Bold"/>
                            </TextBlock>
                            <Button Content="Generar Factura Global (Público General)" 
                                    Padding="15,8" Margin="0,0,10,0" Background="White" BorderBrush="#CCC" BorderThickness="1"/>
                            <Button Content="Generar Factura Fiscal" 
                                    Padding="20,8" Background="{StaticResource PrimaryBrandBrush}" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Historial de Facturas">
                <Grid Background="White" Margin="0,10,0,0">
                    <Grid.Effect>
                        <DropShadowEffect Color="#B0BEC5" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
                    </Grid.Effect>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#FAFAFA" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Mes:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox Width="120" SelectedIndex="0" Margin="0,0,15,0">
                                <ComboBoxItem Content="Noviembre"/>
                                <ComboBoxItem Content="Octubre"/>
                            </ComboBox>
                            <TextBlock Text="Estado:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox Width="120" SelectedIndex="0">
                                <ComboBoxItem Content="Todas"/>
                                <ComboBoxItem Content="Vigentes"/>
                                <ComboBoxItem Content="Canceladas"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="UUID (Folio Fiscal)" Binding="{Binding UUID}" Width="2*" Foreground="Gray"/>
                            <DataGridTextColumn Header="Serie/Folio" Binding="{Binding SerieFolio}" Width="100"/>
                            <DataGridTextColumn Header="Receptor" Binding="{Binding Cliente}" Width="2*"/>
                            <DataGridTextColumn Header="Monto" Binding="{Binding Total}" Width="100" FontWeight="Bold"/>
                            <DataGridTemplateColumn Header="Estado" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#D4EDDA" CornerRadius="4" Padding="5,2" HorizontalAlignment="Center">
                                            <TextBlock Text="Vigente" Foreground="#155724" FontSize="11" FontWeight="Bold"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Acciones" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="PDF" Margin="2" Padding="5,0" Background="White" BorderBrush="#CCC" BorderThickness="1"/>
                                            <Button Content="XML" Margin="2" Padding="5,0" Background="White" BorderBrush="#CCC" BorderThickness="1"/>
                                            <Button Content="✉" Margin="2" Padding="5,0" Background="White" BorderBrush="#CCC" BorderThickness="1" ToolTip="Reenviar Correo"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                        <x:Array Type="{x:Type local:FacturaHistorialEjemplo}">
                            <local:FacturaHistorialEjemplo UUID="A1B2C3D4-..." SerieFolio="A-501" Cliente="Constructora del Norte" Total="$8,900.50"/>
                            <local:FacturaHistorialEjemplo UUID="E5F6G7H8-..." SerieFolio="A-500" Cliente="Público en General" Total="$1,200.00"/>
                        </x:Array>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Page>