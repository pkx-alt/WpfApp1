<Page x:Class="OrySiPOS.Views.FacturacionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrySiPOS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Facturación"
      Background="{StaticResource PageBackground}">

    <Page.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" Background="Transparent" 
                                    BorderBrush="Transparent" BorderThickness="0,0,0,3" 
                                    Margin="0,0,15,0" Padding="15,10">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="0,2"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryDarkColor}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Facturación Electrónica 🧾" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimary}"/>
            <TextBlock Text="Gestiona tus CFDI 4.0: Facturas globales y por cliente."
                       FontSize="14" 
                       Foreground="{StaticResource TextSecondary}" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <TabControl Grid.Row="2" Background="Transparent" BorderThickness="0" Margin="0,-10,0,0">

            <TabItem Header="Pendientes de Facturar">
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="8" Padding="20" Margin="0,0,0,15"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">

                        <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox Width="200" Margin="0,0,15,10"
                                     Text="{Binding TextoBusquedaPendiente, UpdateSourceTrigger=PropertyChanged}"
                                     Tag="Buscar folio..."/>
                            <ComboBox Width="200" Margin="0,0,30,10"
                                      ItemsSource="{Binding ListaClientes}"
                                      SelectedItem="{Binding ClienteFiltroPendiente}"
                                      DisplayMemberPath="RazonSocial"/>

                            <Border Width="1" Height="30" Background="{StaticResource BorderBrush}" Margin="0,0,30,10"/>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,10">
                                <TextBlock Text="Global:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0" Foreground="{StaticResource TextSecondary}"/>
                                <ComboBox Width="140" 
                                      SelectedIndex="{Binding IndicePeriodoGlobal}" 
                                      Margin="0,0,10,0">
                                    <ComboBoxItem Content="Del Día 📅"/>
                                    <ComboBoxItem Content="Semanal 📆"/>
                                    <ComboBoxItem Content="Mensual 🗓️"/>
                                </ComboBox>
                                <Button Content="Generar Global" 
                                        Command="{Binding GenerarGlobalCommand}"
                                        Style="{StaticResource BtnWarning}" 
                                        Padding="15,0" Height="38"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="15,0,0,10">
                                <Button Content="📥 Exportar" 
                                        Click="BtnExportarPendientes_Click" 
                                        Style="{StaticResource BtnSuccess}"
                                        Height="38" Margin="0,0,10,0"/>

                                <Button Content="🔄" 
                                        Command="{Binding RefrescarCommand}"
                                        Style="{StaticResource BtnSecondary}"
                                        Height="38" Width="40" Padding="0"
                                        ToolTip="Actualizar lista"/>
                            </StackPanel>
                        </WrapPanel>
                    </Border>

                    <DataGrid Grid.Row="1" 
          ItemsSource="{Binding ListaPendientes}"
          MouseDoubleClick="Pendientes_MouseDoubleClick">
                        <DataGrid.Columns>
                    
                            <DataGridTextColumn Header="Ticket" Binding="{Binding Folio}" Width="80" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat='dd/MM/yy HH:mm'}" Width="140" Foreground="{StaticResource TextSecondary}"/>

                            <DataGridTemplateColumn Header="Cliente" Width="2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ClienteNombre}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                            <TextBlock Text="{Binding RFC}" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                                            <TextBlock Text="⚠️ Faltan datos fiscales" Foreground="Red" FontSize="10" 
               Visibility="{Binding DatosCompletos, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="120" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>

                            <DataGridTemplateColumn Header="Acción" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Facturar" 
                                            Command="{Binding DataContext.FacturarTicketCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"
                                            Padding="10,4"
                                            FontSize="12"
                                            HorizontalAlignment="Center"
                                            ToolTip="Generar factura para este ticket"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2" Background="#E9ECEF" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="15,5" Margin="0,10,0,0" CornerRadius="0,0,8,8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Tickets pendientes:" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding TotalPendientes}" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Historial de Facturas">
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="8" Padding="20" Margin="0,0,0,15"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">

                        <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,10" VerticalAlignment="Center">
                                <TextBlock Text="Mes:" Margin="0,0,8,0" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}"/>
                                <ComboBox Width="130" ItemsSource="{Binding ListaMeses}" SelectedItem="{Binding MesSeleccionadoHistorial}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,20,10" VerticalAlignment="Center">
                                <TextBlock Text="Estado:" Margin="0,0,8,0" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}"/>
                                <ComboBox Width="120" ItemsSource="{Binding ListaEstados}" SelectedItem="{Binding EstadoSeleccionadoHistorial}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,20,10" VerticalAlignment="Center">
                                <TextBlock Text="Cliente:" Margin="0,0,8,0" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}"/>
                                <ComboBox Width="180" ItemsSource="{Binding ListaClientes}" SelectedItem="{Binding ClienteFiltroHistorial}" DisplayMemberPath="RazonSocial"/>
                            </StackPanel>

                            <Button Content="Buscar" 
                                    Command="{Binding BuscarHistorialCommand}"
                                    Style="{StaticResource BtnSuccess}"
                                    Height="38" Margin="0,0,10,10"/>

                            <Button Content="📥 Excel" 
                                    Click="BtnExportarHistorial_Click"
                                    Style="{StaticResource BtnSecondary}"
                                    Height="38" Margin="10,0,0,10"/>

                            <Button Content="🖨️ Reporte PDF" 
                                    Click="BtnImprimirHistorial_Click"
                                    Style="{StaticResource BtnSecondary}"
                                    Height="38" Margin="10,0,0,10"/>
                        </WrapPanel>
                    </Border>

                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding ListaHistorial}" MouseDoubleClick="Historial_MouseDoubleClick">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Folio" Binding="{Binding SerieFolio}" Width="100" FontWeight="Bold"/>
                            <DataGridTextColumn Header="UUID (Fiscal)" Binding="{Binding UUID}" Width="2*" Foreground="{StaticResource TextSecondary}"/>
                            <DataGridTextColumn Header="Receptor" Binding="{Binding Receptor}" Width="2*"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="120" FontWeight="Bold"/>

                            <DataGridTemplateColumn Header="Estado" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4" Padding="8,2" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#D4EDDA"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Cancelada">
                                                            <Setter Property="Background" Value="#F8D7DA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Estado}" FontWeight="Bold" FontSize="11">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#155724"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Estado}" Value="Cancelada">
                                                                <Setter Property="Foreground" Value="#721C24"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Archivos" Width="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="XML" Margin="2" Padding="8,2" FontSize="11" Style="{StaticResource BtnSecondary}"/>
                                            <Button Content="PDF" 
        Command="{Binding DataContext.AbrirPdfCommand, RelativeSource={RelativeSource AncestorType=Page}}"
        CommandParameter="{Binding}"
        Margin="2" Padding="8,2" FontSize="11" Style="{StaticResource BtnSecondary}"/>
                                            <Button Content="✉" Margin="2" Padding="8,2" FontSize="11" Style="{StaticResource BtnSecondary}" ToolTip="Reenviar"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2" Background="#E9ECEF" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="15,5" Margin="0,10,0,0" CornerRadius="0,0,8,8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Tickets pendientes:" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding TotalPendientes}" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Asignar Claves SAT 🔑">
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <GroupBox Grid.Column="0" Header="1. Tus Productos sin Clave" Padding="10" Margin="0,0,5,0">
                        <DataGrid ItemsSource="{Binding ProductosSinClave}" 
                      SelectedItem="{Binding ProductoLocalSeleccionado}"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Descripción Local" Binding="{Binding Descripcion}" Width="*"/>
                                <DataGridTextColumn Header="SKU" Binding="{Binding ID}" Width="50" Foreground="Gray"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Button Grid.Row="1" Grid.Column="1" Command="{Binding AsignarClaveCommand}"
                ToolTip="Asignar clave seleccionada al producto"
                Width="60" Height="60" 
                Background="{StaticResource SuccessColor}" 
                BorderThickness="0" Cursor="Hand">

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="30">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                            <TextBlock Text="⬅️" FontSize="24" Foreground="White" FontWeight="Bold"/>
                        </Button>
                        <TextBlock Text="Asignar" HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="11" Foreground="Gray"/>
                    </StackPanel>

                    <GroupBox Grid.Column="2" Header="2. Catálogo Oficial SAT" Padding="10" Margin="5,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Text="{Binding BuscadorSat.Busqueda, UpdateSourceTrigger=PropertyChanged}" 
                             Height="35" FontSize="14" Padding="5"
                             Tag="Buscar en el SAT..."/>

                                <Button Grid.Column="1" 
                            Command="{Binding BuscadorSat.ImportarCommand}"
                            Content="📂 CSV" 
                            ToolTip="Importar catálogo completo"
                            Style="{StaticResource BtnWarning}" 
                            Width="Auto" Padding="15,0" Margin="5,0,0,0"/>
                            </Grid>

                            <DataGrid Grid.Row="1"
                          ItemsSource="{Binding BuscadorSat.ProductosSat}" 
                          SelectedItem="{Binding ClaveSatSeleccionada}"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Clave" Binding="{Binding Clave}" Width="80" FontWeight="Bold" Foreground="#007ACC"/>

                                    <DataGridTextColumn Header="Descripción Oficial" Binding="{Binding Descripcion}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextWrapping" Value="NoWrap"/>
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                <Setter Property="ToolTip" Value="{Binding Descripcion}"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Margin" Value="5,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Border Grid.RowSpan="2" Background="#80FFFFFF" 
                        Visibility="{Binding BuscadorSat.EstaCargando, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Procesando archivo..." HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                            </Border>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Page>