<Window x:Class="WpfApp1.Views.Dialogs.ResultadosImportacionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Resultados de Importación" Height="500" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="25,20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📥" FontSize="28" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Resultados de Importación" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock x:Name="TxtResumen" Text="Se procesaron 5 correos y se cargaron 20 productos." 
                                   FontSize="14" Foreground="#666" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <DataGrid x:Name="GridDetalles" Grid.Row="1" Margin="20"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal" 
                  HorizontalGridLinesBrush="#EEEEEE" 
                  VerticalGridLinesBrush="Transparent"
                  Background="White"
                  BorderThickness="0"
                  RowHeight="40">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F9F9F9"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Foreground" Value="#555"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#DDD"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="10,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Background="Transparent" BorderThickness="0">
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="120" Foreground="Gray"/>

                <DataGridTextColumn Header="Remitente" Binding="{Binding Remitente}" Width="180" FontWeight="SemiBold"/>

                <DataGridTextColumn Header="Asunto" Binding="{Binding Asunto}" Width="2*"/>

                <DataGridTemplateColumn Header="Archivo XML" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Archivo}" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Estado" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding ColorFondo}" CornerRadius="10" Padding="10,4" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding ResultadoTexto}" Foreground="{Binding ColorTexto}" FontWeight="Bold" FontSize="11"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="15">
            <Button Content="Cerrar Ventana" 
                    Click="BtnCerrar_Click"
                    HorizontalAlignment="Right"
                    Background="#007ACC" Foreground="White" FontWeight="Bold"
                    Padding="25,8" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Border>
    </Grid>
</Window>