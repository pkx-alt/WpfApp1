<Window x:Class="WpfApp1.Views.Dialogs.FormaPagoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views.Dialogs"
        xmlns:converters="clr-namespace:WpfApp1.Converters"
        xmlns:vm="clr-namespace:WpfApp1.ViewModels"
        xmlns:enums="clr-namespace:WpfApp1.Enums"
        
        mc:Ignorable="d"
        Title="Seleccionar Método de Pago" 
        Height="550" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#FDFDFD"
        FontSize="14"
        
        >

    <Window.DataContext>
        <vm:FormaPagoViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:IsLessThanZeroConverter x:Key="IsLessThanZeroConverter" />
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <Style TargetType="RadioButton" x:Key="MetodoPagoCard">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                MinHeight="100">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#F0F8FF"/>
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F9F9F9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Selecciona un método de pago"
                   FontSize="20" FontWeight="Bold" 
                   Margin="20" HorizontalAlignment="Left" />

        <UniformGrid Grid.Row="1" Rows="1" Margin="10,0">

            <RadioButton Style="{StaticResource MetodoPagoCard}"
                 IsChecked="{Binding MetodoPagoSeleccionado, 
                             Converter={StaticResource EnumToBooleanConverter}, 
                             ConverterParameter={x:Static enums:MetodoPago.Efectivo}}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="[IMAGEN EFECTVO]" Foreground="Green" Margin="5" FontSize="18"/>
                    <TextBlock Text="EFECTIVO" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </RadioButton>

            <RadioButton Style="{StaticResource MetodoPagoCard}"
                 IsChecked="{Binding MetodoPagoSeleccionado, 
                             Converter={StaticResource EnumToBooleanConverter}, 
                             ConverterParameter={x:Static enums:MetodoPago.Tarjeta}}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="[IMAGEN TARJETA]" Foreground="Blue" Margin="5" FontSize="18"/>
                    <TextBlock Text="TARJETA" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </RadioButton>

            <RadioButton Style="{StaticResource MetodoPagoCard}"
                 IsChecked="{Binding MetodoPagoSeleccionado, 
                             Converter={StaticResource EnumToBooleanConverter}, 
                             ConverterParameter={x:Static enums:MetodoPago.Transferencia}}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="[IMAGEN TRANSFER]" Foreground="Orange" Margin="5" FontSize="18"/>
                    <TextBlock Text="TRANSFERENCIA" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </RadioButton>

            <RadioButton Style="{StaticResource MetodoPagoCard}"
                 IsChecked="{Binding MetodoPagoSeleccionado, 
                             Converter={StaticResource EnumToBooleanConverter}, 
                             ConverterParameter={x:Static enums:MetodoPago.Mixto}}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="[IMAGEN MIXTO]" Foreground="Black" Margin="5" FontSize="18"/>
                    <TextBlock Text="MIXTO" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </RadioButton>
        </UniformGrid>

        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="Cantidad recibida:" Margin="0,0,0,5"/>

                <TextBox x:Name="TxtCantidad" Padding="5" 
                         FontSize="16"
                         
                         Text="{Binding PagoRecibido, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                         IsEnabled="{Binding IsPagoRecibidoEnabled}"
                         />

                <StackPanel Orientation="Horizontal" Margin="0,20,0,5" VerticalAlignment="Center">
                    <TextBlock Text="Imprimir ticket" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <CheckBox VerticalAlignment="Center"
                              IsChecked="{Binding ImprimirTicket}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <TextBlock Text="Cliente:" Margin="0,0,0,5"/>
                <ComboBox Padding="5" FontSize="16"
          
          ItemsSource="{Binding ListaClientes}"
          
          SelectedItem="{Binding ClienteSeleccionado}"
          
          DisplayMemberPath="RazonSocial">
                </ComboBox>

                <StackPanel Margin="0,40,10,0" HorizontalAlignment="Right">
                    <TextBlock FontSize="18">
                        <Run Text="Total: "/>
                        <Run Text="{Binding TotalAPagar, StringFormat=C}" FontWeight="Bold"/>
                    </TextBlock>
                    <TextBlock FontSize="18" Margin="0,5,0,0">
                        <Run Text="Pago: "/>
                        <Run Text="{Binding PagoRecibido, StringFormat=C}" FontWeight="Bold"/>
                    </TextBlock>
                    <TextBlock FontSize="22" FontWeight="Bold" Margin="0,10,0,0">
                        <Run>
                            <Run.Style>
                                <Style TargetType="Run">
                                    <Setter Property="Text" Value="Cambio: "/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Cambio, Converter={StaticResource IsLessThanZeroConverter}}" Value="True">
                                            <Setter Property="Text" Value="Saldo pendiente: "/>
                                            <Setter Property="Foreground" Value="#D32F2F"/> </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Run.Style>
                        </Run>
                        <Run Text="{Binding Cambio, StringFormat=C, Mode=OneWay}">
                            <Run.Style>
                                <Style TargetType="Run">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Cambio, Converter={StaticResource IsLessThanZeroConverter}}" Value="True">
                                            <Setter Property="Foreground" Value="#D32F2F"/> </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Run.Style>
                        </Run>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button x:Name="BtnDescuento" Grid.Column="0" 
                        Content="% Hacer descuento" 
                        Background="#E69500" Foreground="Black" FontWeight="Bold" 
                        Padding="15,8" BorderThickness="0" Cursor="Hand"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">

                    <Button Content="Finalizar venta" 
                            Background="#5C946E" Foreground="White" FontWeight="Bold"
                            Padding="15,8" BorderThickness="0" Margin="0,0,10,0" Cursor="Hand"
                            
                            Command="{Binding FinalizarVentaCommand}"
                            />

                    <Button Content="Cerrar" 
                            Background="#8B0000" Foreground="White" FontWeight="Bold"
                            Padding="15,8" BorderThickness="0" Cursor="Hand"
                            
                            Command="{Binding CerrarVentanaCommand}"
                            />
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>