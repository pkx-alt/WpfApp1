<Window x:Class="OrySiPOS.Views.Dialogs.FormaPagoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrySiPOS.Views.Dialogs"
        xmlns:converters="clr-namespace:OrySiPOS.Converters"
        xmlns:vm="clr-namespace:OrySiPOS.ViewModels"
        xmlns:enums="clr-namespace:OrySiPOS.Enums"
        mc:Ignorable="d"
        
        Title="Cobrar Venta" 
        Height="Auto" Width="850"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Window.DataContext>
        <vm:FormaPagoViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:IsLessThanZeroConverter x:Key="IsLessThanZeroConverter" />
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />

        <Style TargetType="RadioButton" x:Key="MetodoPagoCard">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9F9F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource PageBackground}" 
            CornerRadius="15" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            Margin="10">

        <Border.Effect>
            <DropShadowEffect Color="#B0BEC5" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="{Binding TituloVentana}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Selecciona método y confirma el monto."
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondary}" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="❌ Cerrar" 
                        Command="{Binding CerrarVentanaCommand}"
                        Style="{StaticResource BtnSecondary}" 
                        Width="100"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Método de Pago" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="5,0,0,10"/>

                    <UniformGrid Columns="2" Rows="2" Height="220">
                        <RadioButton Style="{StaticResource MetodoPagoCard}"
                                     IsChecked="{Binding MetodoPagoSeleccionado, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enums:MetodoPago.Efectivo}}">
                            <StackPanel>
                                <TextBlock Text="💵" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Efectivo" FontWeight="Bold"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource MetodoPagoCard}"
                                     IsChecked="{Binding MetodoPagoSeleccionado, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enums:MetodoPago.Tarjeta}}">
                            <StackPanel>
                                <TextBlock Text="💳" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Tarjeta" FontWeight="Bold"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource MetodoPagoCard}"
                                     IsChecked="{Binding MetodoPagoSeleccionado, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enums:MetodoPago.Transferencia}}">
                            <StackPanel>
                                <TextBlock Text="🏦" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Transferencia" FontWeight="Bold"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource MetodoPagoCard}"
                                     IsChecked="{Binding MetodoPagoSeleccionado, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enums:MetodoPago.Mixto}}">
                            <StackPanel>
                                <TextBlock Text="🔀" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Mixto" FontWeight="Bold"/>
                            </StackPanel>
                        </RadioButton>
                    </UniformGrid>

                    <Button x:Name="BtnDescuento" 
                            Content="% Aplicar Descuento Extra" 
                            Background="#FFF8E1" Foreground="#F57F17" BorderBrush="#FFD54F" BorderThickness="1"
                            FontWeight="Bold" Margin="5,15,5,0"
                            Command="{Binding RealizarDescuentoCommand}"/>
                </StackPanel>

                <Border Grid.Column="2" Background="White" CornerRadius="10" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="20">
                    <StackPanel>

                        <TextBlock Text="Cliente" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding ListaClientes}"
                                  SelectedItem="{Binding ClienteSeleccionado}"
                                  DisplayMemberPath="RazonSocial"
                                  Height="35" FontSize="14" Margin="0,0,0,20"/>

                        <TextBlock Text="TOTAL A PAGAR" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Right"/>

                        <TextBlock Text="{Binding TotalAPagar, StringFormat=C}" 
                                   FontSize="36" FontWeight="Black" Foreground="{StaticResource PrimaryColor}" 
                                   HorizontalAlignment="Right" Margin="0,0,0,5"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AjusteRedondeo}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="Ajuste por redondeo: " FontSize="12" FontStyle="Italic" Foreground="Gray"/>
                            <TextBlock Text="{Binding AjusteRedondeo, StringFormat=C}" FontSize="12" FontWeight="Bold" FontStyle="Italic">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AjusteRedondeo, Converter={StaticResource IsLessThanZeroConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource WarningColor}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                        <TextBlock Text="Dinero Recibido" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5" Visibility="{Binding VisibilidadPago}"/>
                        <TextBox x:Name="TxtCantidad"
                                 Text="{Binding PagoRecibido, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                 IsEnabled="{Binding IsPagoRecibidoEnabled}"
                                 FontSize="24" FontWeight="Bold" Padding="5"
                                 HorizontalContentAlignment="Right" Height="45"
                                 Visibility="{Binding VisibilidadPago}"/>

                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock VerticalAlignment="Center" FontWeight="Bold" FontSize="16">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="CAMBIO:"/>
                                        <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Cambio, Converter={StaticResource IsLessThanZeroConverter}}" Value="True">
                                                <Setter Property="Text" Value="FALTA:"/>
                                                <Setter Property="Foreground" Value="{StaticResource DangerColor}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Grid.Column="1" Text="{Binding Cambio, StringFormat=C}" FontWeight="Black" FontSize="20">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Cambio, Converter={StaticResource IsLessThanZeroConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource DangerColor}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <CheckBox Content="Imprimir Ticket" 
                                  IsChecked="{Binding ImprimirTicket}" 
                                  Margin="0,15,0,0" HorizontalAlignment="Right"/>

                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Margin="0,25,0,0">
                <Button Content="{Binding TextoBotonAccion}" 
                        Command="{Binding FinalizarVentaCommand}"
                        Style="{StaticResource BtnSuccess}" 
                        Height="50" FontSize="18" FontWeight="Bold">
                    <Button.Effect>
                        <DropShadowEffect Color="#28A745" BlurRadius="15" Opacity="0.4" ShadowDepth="3"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>