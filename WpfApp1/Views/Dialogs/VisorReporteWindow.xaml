<Window x:Class="WpfApp1.Views.Dialogs.VisorReporteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resultado del Reporte" Height="500" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TxtTitulo" Text="Reporte Generado" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <DataGrid x:Name="GridDatos" Grid.Row="1" 
                  AutoGenerateColumns="True" 
                  IsReadOnly="True" 
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  AlternationCount="2" RowBackground="White" AlternatingRowBackground="#F9F9F9">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="Background" Value="#EEE"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>

        <Button Grid.Row="2" Content="Cerrar" HorizontalAlignment="Right" Margin="0,15,0,0" Padding="20,5" IsCancel="True"/>
    </Grid>
</Window>