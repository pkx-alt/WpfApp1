<Window x:Class="WpfApp1.Views.Dialogs.NuevoProductoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="Nuevo Producto" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Detalles del Producto" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Categoría:" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <ComboBox  Grid.Row="0" Grid.Column="1" x:Name="CmbCategoria" Margin="0,5" Padding="3"
                       DisplayMemberPath="Nombre"
                       SelectionChanged="CmbCategoria_SelectionChanged"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Subcategoría:" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <ComboBox  Grid.Row="1" Grid.Column="1" x:Name="CmbSubcategoria" Margin="0,5" Padding="3"
                       DisplayMemberPath="Nombre"
                       IsEnabled="False"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Descripción:" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <TextBox   Grid.Row="2" Grid.Column="1" x:Name="txtDescripcion" Margin="0,5" Padding="3"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Precio:" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <TextBox   Grid.Row="3" Grid.Column="1" x:Name="txtPrecio" Margin="0,5" Padding="3"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Costo:" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <TextBox   Grid.Row="4" Grid.Column="1" x:Name="txtCosto" Margin="0,5" Padding="3"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Clave SAT (8 dgs):" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <TextBox   Grid.Row="5" Grid.Column="1" x:Name="txtClaveSat" MaxLength="8" Margin="0,5" Padding="3" Text="01010101"/>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Clave Unidad:" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <TextBox   Grid.Row="6" Grid.Column="1" x:Name="txtClaveUnidad" MaxLength="3" Margin="0,5" Padding="3" Text="H87"/>
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Stock:" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <TextBox   Grid.Row="7" Grid.Column="1" x:Name="txtStock" Margin="0,5" Padding="3"/>

            <TextBlock Grid.Row="8" Grid.Column="0" Text="URL de Imagen:" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <TextBox   Grid.Row="8" Grid.Column="1" x:Name="txtImagenUrl" Margin="0,5" Padding="3"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Guardar" 
                    x:Name="btnGuardar"
                    FontWeight="Bold" 
                    Padding="15,5" 
                    Margin="0,0,10,0"
                    Click="Guardar_Click"/>
            <Button Content="Cancelar" 
                    x:Name="btnCancelar"
                    IsCancel="True"
                    Padding="15,5"
                    Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>