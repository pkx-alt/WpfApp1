<Window x:Class="OrySiPOS.Views.Dialogs.NuevoProductoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Producto" 
        Height="Auto" Width="700"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border Background="{StaticResource PageBackground}" 
            CornerRadius="15" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            Margin="10">

        <Border.Effect>
            <DropShadowEffect Color="#B0BEC5" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Nuevo Producto 📦" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                <TextBlock Text="Alta de mercancía en inventario" FontSize="13" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="DATOS GENERALES" FontSize="11" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Categoría" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CmbCategoria" DisplayMemberPath="Nombre" SelectionChanged="CmbCategoria_SelectionChanged" Height="35"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Subcategoría" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CmbSubcategoria" DisplayMemberPath="Nombre" IsEnabled="False" Height="35"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Descripción del Producto" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtDescripcion" Height="35" FontSize="14"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="URL de Imagen (Opcional)" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtImagenUrl" Height="35" FontSize="12" FontStyle="Italic" Text="https://"/>

                        <CheckBox x:Name="chkEsServicio" 
          Content="Es un Servicio (No usa inventario)"
          FontSize="12" 
          Foreground="{StaticResource TextPrimary}"
          Margin="0,10,0,10"
          Checked="ChkEsServicio_Checked"
          Unchecked="ChkEsServicio_Unchecked" Height="26"/>
                    </StackPanel>
                </StackPanel>
                

                <StackPanel Grid.Column="2">
                    <TextBlock Text="PRECIOS Y STOCK" FontSize="11" FontWeight="Bold" Foreground="{StaticResource SuccessColor}" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                            <TextBlock Text="Costo ($)" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtCosto" Height="35" FontSize="14" HorizontalContentAlignment="Right"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                            <TextBlock Text="Precio Venta ($)" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtPrecio" Height="35" FontSize="14" FontWeight="Bold" HorizontalContentAlignment="Right" BorderBrush="{StaticResource SuccessColor}" BorderThickness="1.5"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="Stock Inicial" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtStock" Height="35" FontSize="14" Text="1" HorizontalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2">
                            <TextBlock Text="Tasa de Impuesto (IVA)" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CmbIVA" Height="35" FontSize="14" SelectedIndex="0">
                                <ComboBoxItem Content="16% - General" Tag="0.16"/>
                                <ComboBoxItem Content="0% - Libros/Revistas" Tag="0.00"/>
                                <ComboBoxItem Content="8% - Fronterizo" Tag="0.08"/>
                                <ComboBoxItem Content="Exento" Tag="0.00"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Margin="0,25,0,25">
                <TextBlock Text="DATOS SAT (CFDI)" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Clave Prod/Serv" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>

                        <ComboBox x:Name="CmbClaveSat"
                            Height="35" FontSize="12"
                            IsEditable="True"
                            StaysOpenOnEdit="True"
                            IsTextSearchEnabled="False"
                            DisplayMemberPath="Display"
                            SelectedValuePath="Clave"
                            KeyUp="CmbClaveSat_KeyUp"
                            ToolTip="Escribe para buscar...">         

                            <ComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel VirtualizationMode="Recycling" />
                                </ItemsPanelTemplate>
                            </ComboBox.ItemsPanel>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Clave Unidad" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>

                        <ComboBox x:Name="CmbClaveUnidad" 
                          Height="35" FontSize="12"
                          IsEditable="True"
                          StaysOpenOnEdit="True"
                          IsTextSearchEnabled="False"
                          DisplayMemberPath="Display"
                          SelectedValuePath="Clave"
                          KeyUp="CmbClaveUnidad_KeyUp"
                          ToolTip="Ej: H87 (Pieza)"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancelar" 
                Content="Cancelar" 
                Style="{StaticResource BtnSecondary}" 
                Click="Cancelar_Click" 
                IsCancel="True"
                Width="100" Margin="0,0,10,0"/>

                <Button x:Name="btnGuardar" 
                Content="Guardar Producto" 
                Style="{StaticResource BtnSuccess}" 
                Click="Guardar_Click" 
                Width="150">
                    <Button.Effect>
                        <DropShadowEffect Color="#28A745" BlurRadius="10" Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>