<Window x:Class="WpfApp1.Views.Dialogs.DetallesCategoriaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalles de Categoría"
        Height="Auto" Width="400"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border Background="{StaticResource PageBackground}" 
            CornerRadius="15" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            Margin="10">

        <Border.Effect>
            <DropShadowEffect Color="#B0BEC5" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" CornerRadius="14,14,0,0" Padding="20">
                <StackPanel>
                    <TextBlock Text="📂 DETALLES" Foreground="White" FontSize="10" FontWeight="Bold" Opacity="0.8"/>
                    <TextBlock x:Name="NombreTextBlock" Text="[Nombre]" Foreground="White" FontSize="22" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1" Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Descripción" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock x:Name="DescripcionTextBlock" Text="[Descripción]" TextWrapping="Wrap" Foreground="{StaticResource TextPrimary}"/>
                </StackPanel>

                <UniformGrid Grid.Row="1" Columns="2" Rows="1">
                    <Border Background="White" CornerRadius="8" Padding="10" Margin="0,0,5,0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Subcategorías" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="🏷️" Margin="0,0,5,0"/>
                                <TextBlock x:Name="SubCountTextBlock" Text="0" FontWeight="Bold" FontSize="18" Foreground="{StaticResource PrimaryColor}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="8" Padding="10" Margin="5,0,0,0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Productos" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="📦" Margin="0,0,5,0"/>
                                <TextBlock x:Name="ProdCountTextBlock" Text="0" FontWeight="Bold" FontSize="18" Foreground="{StaticResource SuccessColor}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,25,25">
                <Button x:Name="CerrarButton" 
                        Content="Cerrar" 
                        Style="{StaticResource BtnSecondary}" 
                        Click="CerrarButton_Click" 
                        IsCancel="True"
                        Width="90" Margin="0,0,10,0"/>

                <Button x:Name="EditarButton" 
                        Content="Editar" 
                        Style="{StaticResource BtnSuccess}" 
                        Click="EditarButton_Click"
                        Width="100">
                    <Button.Effect>
                        <DropShadowEffect Color="#28A745" BlurRadius="10" Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>