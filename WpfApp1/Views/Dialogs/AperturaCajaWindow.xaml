<Window x:Class="WpfApp1.Views.Dialogs.AperturaCajaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views.Dialogs"
        mc:Ignorable="d"
        Title="Confirmar Apertura" Height="360" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="WhiteSmoke">
    <StackPanel Margin="25">

        <TextBlock Text="Confirmación de apertura de caja"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="#333"/>

        <TextBlock Text="Información de turno:"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,20,0,5"/>

        <TextBlock x:Name="FechaHoraTextBlock" Text="Fecha y hora: ..."
                   FontSize="13"
                   Foreground="#555"/>
        <TextBlock Text="Punto de venta: Caja principal"
                   FontSize="13"
                   Foreground="#555"
                   Margin="0,2,0,0"/>

        <Separator Margin="0,15,0,15" BorderBrush="#AAA" BorderThickness="0.5" >
            <Separator.Template>
                <ControlTemplate TargetType="Separator">
                    <Rectangle StrokeDashArray="2 2" Stroke="{TemplateBinding BorderBrush}" Height="1"/>
                </ControlTemplate>
            </Separator.Template>
        </Separator>

        <TextBlock Text="Fondo inicial en efectivo:"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,10,0,5"/>

        <TextBox x:Name="MontoInicialTextBox"
                 FontSize="16"
                 Padding="8"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
            <Button x:Name="FinalizarButton" 
                    Content="Finalizar" 
                    Background="#5C946E" 
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="20,8"
                    BorderThickness="0"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    Click="FinalizarButton_Click"/>

            <Button x:Name="CancelarButton" 
                    Content="Cancelar" 
                    Background="#6C757D" 
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="20,8"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelarButton_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
