<Window x:Class="OrySiPOS.Views.Dialogs.NuevoClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Cliente" 
        Height="Auto" Width="600"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border Background="{StaticResource PageBackground}" 
            CornerRadius="15" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            Margin="10">

        <Border.Effect>
            <DropShadowEffect Color="#B0BEC5" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Nuevo Cliente 👥" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                <TextBlock Text="Registrar datos fiscales y de contacto" FontSize="13" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,0,0,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#E3F2FD" CornerRadius="8" Padding="10" Margin="0,0,0,20" BorderBrush="#90CAF9" BorderThickness="1">
                    <CheckBox x:Name="chkEsFactura" 
                              Content="¿Requiere Factura Fiscal?"
                              FontSize="15" FontWeight="Bold"
                              Foreground="{StaticResource PrimaryColor}"
                              HorizontalAlignment="Center"
                              VerticalContentAlignment="Center"
                              Click="chkEsFactura_Click"
                              Cursor="Hand"/>
                </Border>

                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,0,15">
                    <TextBlock Text="Razón Social / Nombre Completo:" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtRazonSocial" Height="35" FontSize="14" Padding="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                    <TextBlock Text="Teléfono / Contacto:" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtTelefono" Height="35" FontSize="14" Padding="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,20">
                    <TextBlock Text="Correo Electrónico (opcional):" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtCorreo" Height="35" FontSize="14" Padding="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Datos Fiscales (Opcional si no factura)" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                    <Separator Margin="10,0,0,0" Width="250" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="0" Margin="0,0,0,15">
                    <TextBox x:Name="txtRfc" Text="XAXX010101000" Height="35" MaxLength="13" CharacterCasing="Upper" FontSize="14" FontWeight="Bold" Padding="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="2" Margin="0,0,0,15">
                    <TextBlock Text="Código Postal (Fiscal):" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtCodigoPostal" Text="00000" Height="35" MaxLength="5" FontSize="14" Padding="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="6" Grid.Column="0" Margin="0,0,0,15">
                    <TextBlock Text="Régimen Fiscal:" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="CmbRegimen" 
                              DisplayMemberPath="Display" 
                              SelectedValuePath="Clave"
                              Height="35" FontSize="13" Padding="5,0"
                              VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="6" Grid.Column="2" Margin="0,0,0,15">
                    <TextBlock Text="Uso de CFDI:" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="CmbUsoCfdi" 
                              DisplayMemberPath="Display" 
                              SelectedValuePath="Clave"
                              Height="35" FontSize="13" Padding="5,0"
                              VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancelar" 
                        Content="Cancelar" 
                        Style="{StaticResource BtnSecondary}" 
                        Click="btnCancelar_Click" 
                        IsCancel="True"
                        Width="100" Margin="0,0,10,0"/>

                <Button x:Name="btnGuardar" 
                        Content="Guardar Cliente" 
                        Style="{StaticResource BtnSuccess}" 
                        Click="btnGuardar_Click" 
                        IsDefault="True"
                        Width="140">
                    <Button.Effect>
                        <DropShadowEffect Color="#28A745" BlurRadius="10" Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>