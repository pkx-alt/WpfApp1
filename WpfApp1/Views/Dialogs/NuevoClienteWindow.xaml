<Window x:Class="WpfApp1.Views.Dialogs.NuevoClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Nuevo Cliente" Height="450" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Razón Social: (Obligatorio)" FontWeight="SemiBold"/>
            <TextBox x:Name="txtRazonSocial" Margin="0,5,0,10" Padding="3"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="RFC: (Obligatorio)" FontWeight="SemiBold"/>
            <TextBox x:Name="txtRfc" MaxLength="13" Margin="0,5,0,10" Padding="3"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Teléfono:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtTelefono" Margin="0,5,0,10" Padding="3"/>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <TextBlock Text="Código Postal (Domicilio Fiscal):" FontWeight="SemiBold"/>
            <TextBox x:Name="txtCodigoPostal" MaxLength="5" Margin="0,5,0,10" Padding="3"
                     ToolTip="5 dígitos (Ej. 64000)"/>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <TextBlock Text="Régimen Fiscal (Clave):" FontWeight="SemiBold"/>
            <TextBox x:Name="txtRegimenFiscal" MaxLength="3" Margin="0,5,0,10" Padding="3"
                     ToolTip="Ej: 612 Personas Físicas, 601 Personas Morales"/>
        </StackPanel>

        <StackPanel Grid.Row="5">
            <TextBlock Text="Uso CFDI (Clave):" FontWeight="SemiBold"/>
            <TextBox x:Name="txtUsoCFDI" MaxLength="3" Margin="0,5,0,10" Padding="3"
                     ToolTip="Ej: G03 Gastos en general, P01 Por definir"/>
        </StackPanel>
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnGuardar" Content="Guardar" Padding="15,5" Margin="0,0,10,0" Click="btnGuardar_Click" FontWeight="Bold"/>
            <Button x:Name="btnCancelar" Content="Cancelar" Padding="15,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>