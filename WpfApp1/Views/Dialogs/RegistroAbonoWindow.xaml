<Window x:Class="WpfApp1.Views.Dialogs.RegistroAbonoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Abono" SizeToContent="Height" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Registrar Abono" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <TextBlock Text="Monto pendiente:" Foreground="Gray"/>
            <TextBlock Text="{Binding DeudaTotal, StringFormat=C}" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBlock Text="Cantidad a abonar:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding MontoAbono, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="16" Padding="5" Margin="0,5,0,15"/>

            <TextBlock Text="Método de pago:" FontWeight="SemiBold"/>
            <ComboBox ItemsSource="{Binding MetodosDisponibles}" 
                      SelectedItem="{Binding MetodoPago}"
                      Padding="5" Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Aceptar" Command="{Binding ConfirmarCommand}" 
                        Background="#28A745" Foreground="White" FontWeight="Bold"
                        Padding="15,5" Margin="0,0,10,0"/>
                <Button Content="Cancelar" IsCancel="True" Padding="15,5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>