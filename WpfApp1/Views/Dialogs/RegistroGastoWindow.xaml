<Window x:Class="OrySiPOS.Dialogs.RegistroGastoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Gasto" 
        Height="Auto" Width="450"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border Background="{StaticResource PageBackground}" 
            CornerRadius="15" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            Margin="10">

        <Border.Effect>
            <DropShadowEffect Color="#B0BEC5" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="💸 Nuevo Gasto" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource DangerColor}" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Registro de salida de dinero" 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondary}" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,0,0,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Concepto / Descripción" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NuevoGasto.Concepto, UpdateSourceTrigger=PropertyChanged}" Height="35" FontSize="14"/>
                </StackPanel>

                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Categoría" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding CategoriasDisponibles}" SelectedItem="{Binding NuevoGasto.Categoria}" Height="35"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Monto ($)" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NuevoGasto.Monto, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                                 Height="35" FontSize="14" FontWeight="Bold" HorizontalContentAlignment="Right" 
                                 BorderBrush="{StaticResource DangerColor}"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Método" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding MetodosDisponibles}" SelectedItem="{Binding NuevoGasto.MetodoPago}" Height="35"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Usuario" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NuevoGasto.Usuario}" Height="35" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="3">
                    <TextBlock Text="Fecha del Gasto" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding NuevoGasto.Fecha}" Height="35"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" 
                        Click="btnCancelar_Click"
                        Style="{StaticResource BtnSecondary}" 
                        Width="100" 
                        Margin="0,0,10,0"/>

                <Button Content="Registrar" 
                        Command="{Binding GuardarGastoCommand}"
                        Style="{StaticResource BtnDanger}" 
                        Width="120" 
                        IsDefault="True">
                    <Button.Effect>
                        <DropShadowEffect Color="#D32F2F" BlurRadius="10" Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>