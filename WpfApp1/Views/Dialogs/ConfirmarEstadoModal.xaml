<Window x:Class="WpfApp1.Views.Dialogs.ConfirmarEstadoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views.Dialogs"
        mc:Ignorable="d"
        Title="Confirmar acción" 
        Height="Auto" Width="500"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="NoResize">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TituloTextBlock"
                   Grid.Row="0"
                   Text="Deshabilitar producto" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border BorderBrush="#EEEEEE" BorderThickness="1" Width="100" Height="100" Margin="0,0,15,0">
                <Image Source="{Binding ImagenUrl}" Stretch="Uniform"/>
            </Border>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Producto:" FontWeight="Bold"/>
                <TextBlock TextWrapping="Wrap" Margin="0,2,0,5"
                           Text="{Binding Descripcion}"/>
            </StackPanel>
        </Grid>

        <TextBlock x:Name="PreguntaTextBlock"
                   Grid.Row="2"
                   Text="¿Estás seguro de que quieres deshabilitar el producto?"
                   FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="3" Margin="0,0,0,20">

            <StackPanel x:Name="PuntosDeshabilitar">
                <TextBlock Text="Al desactivar un producto:" Margin="0,0,0,5"/>
                <TextBlock Text=" • No aparecerá en la pantalla de ventas." Margin="15,0,0,2"/>
                <TextBlock Text=" • Se ocultará de la parte principal del inventario." Margin="15,0,0,2"/>
                <TextBlock Text=" • No se incluirá en los reportes de stock histórico." Margin="15,0,0,10"/>
                <TextBlock x:Name="NotaDeshabilitar" Foreground="Red" FontWeight="Bold" TextWrapping="Wrap"
                           Text="NOTA: El historial de ventas y movimientos no cambiará. Esta acción se puede revertir."/>
            </StackPanel>

            <StackPanel x:Name="PuntosHabilitar" Visibility="Collapsed">
                <TextBlock Text="Al activar este producto:" Margin="0,0,0,5"/>
                <TextBlock Text=" • Volverá a estar disponible en la pantalla de ventas." Margin="15,0,0,2"/>
                <TextBlock Text=" • Aparecerá en la lista principal del inventario." Margin="15,0,0,2"/>
                <TextBlock Text=" • Se incluirá en futuros reportes." Margin="15,0,0,10"/>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BotonConfirmar"
                    Content="Sí, deshabilitar" 
                    Background="#D32F2F" Foreground="White" 
                    FontWeight="Bold"
                    Padding="15,8" Margin="0,0,10,0"
                    Click="Confirmar_Click"/>

            <Button x:Name="BotonCancelar"
                    Content="No, cancelar"
                    Background="#9E9E9E" Foreground="White" 
                    Padding="15,8"
                    Click="Cancelar_Click"
                    IsCancel="True"/>
        </StackPanel>

    </Grid>
</Window>