<Window x:Class="WpfApp1.Views.Dialogs.ConfirmarEstadoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Confirmar Estado" 
        Height="Auto" Width="450"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border Background="{StaticResource PageBackground}" 
            CornerRadius="15" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            Margin="10">
        
        <Border.Effect>
            <DropShadowEffect Color="#B0BEC5" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TituloTextBlock" 
                       Grid.Row="0"
                       Text="Confirmar Acción" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <Border Grid.Row="1" Background="White" CornerRadius="10" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Width="60" Height="60" CornerRadius="5" BorderBrush="#EEE" BorderThickness="1" Margin="0,0,15,0">
                        <Image Source="{Binding ImagenUrl}" Stretch="Uniform"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="PRODUCTO SELECCIONADO" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="{Binding Descripcion}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding ID, StringFormat='SKU: {0}'}" FontSize="11" Foreground="Gray" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel x:Name="PanelInfo" Grid.Row="2" Margin="0,0,0,25">
                <TextBlock Text="Consecuencias:" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="•" Foreground="{StaticResource TextSecondary}" Margin="0,0,5,0"/>
                    <TextBlock Text="Se ocultará de la pantalla de ventas." FontSize="13" Foreground="#555"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="•" Foreground="{StaticResource TextSecondary}" Margin="0,0,5,0"/>
                    <TextBlock Text="No se podrá agregar nuevo stock." FontSize="13" Foreground="#555"/>
                </StackPanel>

                <Border Background="#FFF3CD" CornerRadius="5" Padding="10" Margin="0,10,0,0" BorderBrush="#FFECB5" BorderThickness="1">
                    <TextBlock Text="💡 Nota: El historial de ventas se mantendrá intacto." FontSize="11" Foreground="#856404" TextWrapping="Wrap"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BotonCancelar" 
                        Content="Cancelar" 
                        Click="Cancelar_Click"
                        Style="{StaticResource BtnSecondary}" 
                        Width="110" 
                        Margin="0,0,15,0"/>

                <Button x:Name="BotonConfirmar" 
                        Content="Confirmar" 
                        Click="Confirmar_Click"
                        Style="{StaticResource BtnDanger}" 
                        Width="130"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>