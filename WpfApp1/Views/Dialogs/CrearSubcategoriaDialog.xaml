<Window x:Class="WpfApp1.Views.Dialogs.CrearSubcategoriaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subcategoría" 
        Height="Auto" Width="400"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        Loaded="Window_Loaded">

    <Border Background="{StaticResource PageBackground}" 
            CornerRadius="15" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            Margin="10">

        <Border.Effect>
            <DropShadowEffect Color="#B0BEC5" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Gestión de Subcategoría" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimary}" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1" Margin="0,0,0,25">
                <TextBlock Text="Nombre de la subcategoría:" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource TextSecondary}" 
                           Margin="0,0,0,8"/>

                <TextBox x:Name="NombreTextBox" 
                         FontSize="16" 
                         Padding="8" 
                         Height="40" 
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" 
                        Content="Cancelar" 
                        Style="{StaticResource BtnSecondary}" 
                        Width="100" 
                        Click="CancelButton_Click"
                        IsCancel="True"
                        Margin="0,0,10,0"/>

                <Button x:Name="OkButton" 
                        Content="Guardar" 
                        Style="{StaticResource BtnSuccess}" 
                        Width="100" 
                        Click="OkButton_Click" 
                        IsDefault="True">
                    <Button.Effect>
                        <DropShadowEffect Color="#28A745" BlurRadius="10" Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>