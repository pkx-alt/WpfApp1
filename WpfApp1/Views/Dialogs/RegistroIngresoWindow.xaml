<Window x:Class="WpfApp1.Views.Dialogs.RegistroIngresoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Registrar Nuevo Ingreso" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="ColorIngreso" Color="#28A745"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="REGISTRAR INGRESO" Foreground="{StaticResource ColorIngreso}" FontWeight="Bold" FontSize="16" Margin="0,0,0,15" HorizontalAlignment="Center"/>

            <TextBlock Text="Concepto / Descripción:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <TextBox Text="{Binding NuevoIngreso.Concepto, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="0,0,0,15"/>

            <TextBlock Text="Categoría:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <ComboBox ItemsSource="{Binding CategoriasDisponibles}" 
                      SelectedItem="{Binding NuevoIngreso.Categoria}"
                      Height="30" Margin="0,0,0,15"/>

            <TextBlock Text="Monto:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <TextBox Text="{Binding NuevoIngreso.Monto, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Height="30" Margin="0,0,0,15"/>

            <TextBlock Text="Método de Entrada:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <ComboBox ItemsSource="{Binding MetodosDisponibles}"
                      SelectedItem="{Binding MetodosDisponibles[0]}"
                      Text="{Binding NuevoIngreso.MetodoPago}"
                      Height="30" Margin="0,0,0,15"/>

            <TextBlock Text="Registrado Por:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <TextBox Text="{Binding NuevoIngreso.Usuario}" Height="30" Margin="0,0,0,15"/>

            <TextBlock Text="Fecha:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <DatePicker SelectedDate="{Binding NuevoIngreso.Fecha}" Height="30" Margin="0,0,0,15"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnCancelar" Click="btnCancelar_Click" Content="Cancelar" Width="90" Height="35" Margin="0,0,10,0" Background="Transparent" Foreground="Gray" BorderBrush="Gray" Cursor="Hand"/>

            <Button Content="Guardar Ingreso" Width="120" Height="35" 
                    Background="{StaticResource ColorIngreso}" 
                    Foreground="White" BorderThickness="0" Cursor="Hand"
                    Command="{Binding GuardarIngresoCommand}"/>
        </StackPanel>
    </Grid>
</Window>