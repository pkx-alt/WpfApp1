<Window x:Class="WpfApp1.Views.Dialogs.RegistroIngresoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Ingreso" 
        Height="Auto" Width="450"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border Background="{StaticResource PageBackground}" 
            CornerRadius="15" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            Margin="10">

        <Border.Effect>
            <DropShadowEffect Color="#B0BEC5" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="💰 Nuevo Ingreso" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource SuccessColor}" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Registro de entrada de efectivo extra" 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondary}" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,0,0,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Concepto / Descripción" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NuevoIngreso.Concepto, UpdateSourceTrigger=PropertyChanged}" Height="35" FontSize="14"/>
                </StackPanel>

                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Categoría" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding CategoriasDisponibles}" SelectedItem="{Binding NuevoIngreso.Categoria}" Height="35"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Monto ($)" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NuevoIngreso.Monto, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                                 Height="35" FontSize="14" FontWeight="Bold" HorizontalContentAlignment="Right"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Método" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding MetodosDisponibles}" Text="{Binding NuevoIngreso.MetodoPago}" Height="35"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Usuario" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NuevoIngreso.Usuario}" Height="35" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="3">
                    <TextBlock Text="Fecha de Registro" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding NuevoIngreso.Fecha}" Height="35"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancelar" 
                        Content="Cancelar" 
                        Click="btnCancelar_Click"
                        Style="{StaticResource BtnSecondary}" 
                        Width="100" 
                        Margin="0,0,10,0"/>

                <Button Content="Guardar" 
                        Command="{Binding GuardarIngresoCommand}"
                        Style="{StaticResource BtnSuccess}" 
                        Width="120" 
                        IsDefault="True">
                    <Button.Effect>
                        <DropShadowEffect Color="#28A745" BlurRadius="10" Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>