<Window x:Class="WpfApp1.Views.Dialogs.MoverSubcategoriasDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mover subcategorías"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Margin="10">
        <StackPanel Margin="20" MinWidth="300">
            <TextBlock Text="Mover subcategorías" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="ConteoTextBlock" Text="Vas a mover 0 subcategorías" Margin="0,0,0,15"/>

            <TextBlock Text="Selecciona la nueva categoría:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoriasComboBox"
                      DisplayMemberPath="Nombre"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="MoverButton" Content="Mover" MinWidth="80" Margin="0,0,10,0" 
                        Background="#5cb85c" Foreground="White" FontWeight="Bold"
                        IsDefault="True" Click="MoverButton_Click"/>
                <Button Content="Cancelar" IsCancel="True" MinWidth="80" Background="#888888" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>