<Window x:Class="OrySiPOS.Views.Dialogs.MoverSubcategoriasDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mover Subcategorías"
        Height="Auto" Width="450"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border Background="{StaticResource PageBackground}" 
            CornerRadius="15" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            Margin="10">

        <Border.Effect>
            <DropShadowEffect Color="#B0BEC5" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Opacity="0.8">
                    <TextBlock Text="📂" FontSize="28" VerticalAlignment="Center"/>
                    <TextBlock Text="➔" FontSize="24" Margin="15,0" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock Text="📂" FontSize="28" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="Mover Subcategorías" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,0,0,25">

                <Border Background="#E3F2FD" CornerRadius="8" Padding="15" Margin="0,0,0,20" BorderBrush="#90CAF9" BorderThickness="1">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ℹ️" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock x:Name="ConteoTextBlock" 
                                   Text="Se moverán X subcategorías" 
                                   Foreground="#1565C0" 
                                   FontWeight="SemiBold" 
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="Selecciona la categoría destino:" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource TextSecondary}" 
                           Margin="0,0,0,8"/>

                <ComboBox x:Name="CategoriasComboBox"
                          DisplayMemberPath="Nombre"
                          Height="45"
                          FontSize="14"
                          Padding="10,0"
                          VerticalContentAlignment="Center"
                          Background="White"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelarButton" 
                        Content="Cancelar" 
                        Click="CancelarButton_Click" 
                        Style="{StaticResource BtnSecondary}" 
                        Width="100" 
                        IsCancel="True"
                        Margin="0,0,10,0"/>

                <Button x:Name="MoverButton" 
                        Content="Confirmar" 
                        Click="MoverButton_Click" 
                        Style="{StaticResource BtnSuccess}" 
                        Width="110" 
                        IsDefault="True">
                    <Button.Effect>
                        <DropShadowEffect Color="#28A745" BlurRadius="10" Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>